<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Cidade - Lobby</title>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; outline: none; }
        body { margin: 0; padding: 0; background: #111; overflow: hidden; height: 100vh; width: 100vw; font-family: 'Roboto', sans-serif; user-select: none; display: flex; justify-content: center; align-items: center; }
        #gameArea { position: relative; width: 100%; max-width: 500px; height: 100%; max-height: 900px; background-image: url('/uploads/map_bg.png'); image-rendering: pixelated; background-size: cover; background-position: center top; background-repeat: no-repeat; cursor: crosshair; box-shadow: 0 0 50px rgba(0,0,0,0.8); overflow: hidden; z-index: 1; isolation: isolate; }
        .machine { position: absolute; z-index: 50; cursor: pointer; background-color: transparent; outline: none; } .machine:active { transform: scale(0.98); }
        #market { top: 5%; left: 2%; width: 30%; height: 18%; } #gym-building { top: 5%; left: 35%; width: 30%; height: 18%; } #pc-center { top: 5%; right: 2%; width: 30%; height: 18%; } #pc-battle { top: 72%; right: 0%; width: 25%; height: 20%; } #pc-lab { top: 80%; left: 5%; width: 80px; height: 80px; background-image: url('/uploads/lab_building.png'); background-size: contain; background-repeat: no-repeat; filter: drop-shadow(0 5px 5px rgba(0,0,0,0.5)) hue-rotate(180deg); z-index: 55; }
        .player { position: absolute; width: 48px; height: 48px; background-size: 400% auto; image-rendering: pixelated; filter: drop-shadow(0 4px 2px rgba(0,0,0,0.4)); margin-left: -24px; margin-top: -40px; z-index: 10; transition: top 0s linear, left 0s linear; }
        <% for(let i = 1; i <= skinCount; i++) { %> .player[data-skin="char<%= i %>"] { background-image: url('/uploads/char<%= i %>.png'); } <% } %>
        .player.walking { animation: walk-anim 0.6s steps(4) infinite; } @keyframes walk-anim { from { background-position-x: 0; } to { background-position-x: -400%; } }
        .player[data-dir="down"] { background-position-y: 0%; } .player[data-dir="left"] { background-position-y: 33.33%; } .player[data-dir="right"] { background-position-y: 66.66%; } .player[data-dir="up"] { background-position-y: 100%; }
        .player-name { position: absolute; top: -30px; left: 50%; transform: translateX(-50%); background: rgba(0,0,0,0.6); color: white; padding: 2px 6px; border-radius: 4px; font-size: 0.7rem; white-space: nowrap; pointer-events: none; z-index: 500; }
        .chat-bubble { position: absolute; bottom: 60px; left: 50%; transform: translateX(-50%); background: white; color: black; padding: 5px 10px; border-radius: 10px; border: 2px solid #333; font-size: 0.8rem; z-index: 1000; animation: popIn 0.2s forwards; } @keyframes popIn { from { transform: translateX(-50%) scale(0); opacity: 0; } to { transform: translateX(-50%) scale(1); opacity: 1; } }
        #chatBar { position: fixed; bottom: max(20px, env(safe-area-inset-bottom) + 15px); left: 50%; transform: translateX(-50%); width: 90%; max-width: 450px; display: flex; align-items: center; gap: 8px; z-index: 9999; background: #1a1a2e; border: 2px solid #3498db; padding: 8px; border-radius: 50px; }
        #chatInput { flex: 1; padding: 5px 10px; border: none; background: transparent; color: white; outline: none; font-size: 1rem; } #chatSend { width: 40px; height: 40px; border-radius: 50%; border: none; background: linear-gradient(135deg, #f1c40f, #f39c12); color: #1a1a2e; cursor: pointer; display: flex; align-items: center; justify-content: center; }
        .npc-entity { cursor: pointer; }
    </style>
</head>
<body>
    <%- include('partials/menu') %>
    <div id="gameArea">
        <div class="forest-exit"></div>
        <div class="machine" id="market" onclick="moveToAndInteract(event, this, 'market')"></div>
        <div class="machine" id="pc-center" onclick="moveToAndInteract(event, this, 'heal')"></div>
        <div class="machine" id="gym-building" onclick="moveToAndInteract(event, this, 'gym_closed')"></div>
        <div class="machine" id="pc-battle" onclick="moveToAndInteract(event, this, 'battle')"></div>
        <% if(isAdmin) { %> <div class="machine" id="pc-lab" onclick="moveToAndInteract(event, this, 'admin')"></div> <% } %>
        <div id="chatBar"><input type="text" id="chatInput" placeholder="..." maxlength="30"><button id="chatSend">ðŸ’¬</button></div>
    </div>
    <div id="toastContainer"></div>
    <!-- Modais Battle/Online -->
    <div class="modal-overlay" id="modalOnline"><div class="modal-content" style="padding:0; overflow:hidden; display:flex; flex-direction:column;"><div style="display:flex; border-bottom:1px solid #333;"><button class="tab-btn active" onclick="switchTab('tab-play')">JOGAR</button><button class="tab-btn" onclick="openWatchTab()">ASSISTIR</button><button class="close-btn" onclick="closeModal('modalOnline')">X</button></div><div id="tab-play" class="tab-content" style="padding:20px; flex:1;"><select id="onlineFighter"><% if(team.length > 0) { team.forEach(p => { %><option value="<%= p.instanceId %>"><%= p.name %> (Lv.<%= p.level %>)</option><% }); } else { %><option>Sem Pokemons</option><% } %></select><div style="margin-top:10px; display:flex; gap:8px; align-items:center;"><label style="font-size:0.75rem; color:#ccc;">Aposta</label><input id="betAmount" type="number" min="0" value="0" style="flex:1; padding:8px;"></div><button id="btnSearch" onclick="startSearch()" style="margin-top:20px;">PROCURAR</button><button id="btnCancelSearch" onclick="cancelSearch()" style="margin-top:20px; background:#e74c3c; display:none;">CANCELAR</button><div id="searchStatus" style="display:none; margin-top:15px; color:#f1c40f;">Procurando...</div></div><div id="tab-watch" class="tab-content" style="display:none; padding:10px;"><div id="battlesList"></div></div></div></div>
    <div class="modal-overlay" id="modalBattle"><div class="modal-content" style="padding:18px; display:block; max-width:420px;"><button class="close-btn" onclick="closeModal('modalBattle')">X</button><h2 style="text-align:center; color:#e74c3c; font-family:'Press Start 2P';">ARENA</h2><form action="/battle" method="POST" onsubmit="return validateBattleForm()" style="display:flex; flex-direction:column; gap:12px;"><input type="hidden" name="userId" value="<%= user._id %>"><input type="hidden" name="playerName" value="<%= playerName %>"><input type="hidden" name="playerSkin" value="<%= playerSkin %>"><input type="hidden" name="mode" value="manual"><label style="font-size:0.75rem; color:#ccc;">Lutador</label><select name="fighterId" id="f1" required style="padding:10px;"><option value="" disabled selected>Escolha...</option><% if(team.length===0){%><option value="" disabled>Vazio</option><% }else{ %><% team.forEach(p=>{ %><option value="<%= p.instanceId %>"><%= p.name %> (Lv.<%= p.level %>)</option><% }) %><% } %></select><div style="display:flex; gap:8px;"><button type="submit" style="flex:1; background:#e74c3c;">TREINO</button><button type="button" onclick="openModal('modalOnline'); closeModal('modalBattle');" style="flex:1; background:#3498db;">ONLINE</button></div></form></div></div>
    <form id="spectateForm" action="/battle/spectate" method="POST" style="display:none;"><input type="hidden" name="roomId" id="specRoomId"><input type="hidden" name="playerName" value="<%= playerName %>"><input type="hidden" name="playerSkin" value="<%= playerSkin %>"></form>
    <form id="onlineRedirectForm" action="/battle/online" method="POST" style="display:none;"><input type="hidden" name="roomId" id="formRoomId"><input type="hidden" name="meData" id="formMeData"><input type="hidden" name="opponentData" id="formOpponentData"></form>
    <script src="/scripts/common.js"></script>
    <script>
        const socket = io();
        const myName = "<%= playerName %>";
        const mySkin = "<%= playerSkin %>";
        const gameArea = document.getElementById('gameArea');
        let myId = null; const MOVEMENT_SPEED = 55; let isPlayerMoving = false;
        const chatInput = document.getElementById('chatInput'); const chatBtn = document.getElementById('chatSend');
        const urlParams = new URLSearchParams(window.location.search);
        const spawnFrom = urlParams.get('from');
        function sendChat() { const msg = chatInput.value.trim(); if (msg) { socket.emit('send_chat', msg); chatInput.value = ''; chatInput.blur(); } }
        chatBtn.addEventListener('click', (e) => { e.stopPropagation(); sendChat(); }); chatInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') sendChat(); }); chatInput.addEventListener('click', (e) => { e.stopPropagation(); });
        socket.on('connect', () => { myId = socket.id; let iX=50, iY=50, iD='down'; if(spawnFrom==='forest'){iX=10;iY=50;iD='right';} socket.emit('enter_map', { userId:'<%= user._id %>', name:myName, skin:mySkin, map:'lobby', x:iX, y:iY, direction:iD }); });
        socket.on('map_state', (players) => { document.querySelectorAll('.player:not(.npc-entity)').forEach(el => el.remove()); players.forEach(p => createPlayerElement(p)); });
        socket.on('player_joined', (p) => { if(p.id !== myId) createPlayerElement(p); });
        socket.on('player_moved', (data) => { const el = document.getElementById(`p-${data.id}`); if(el) { const cL=parseFloat(el.style.left)||50, cT=parseFloat(el.style.top)||50, dist=Math.sqrt((data.x-cL)**2+(data.y-cT)**2), dur=dist/MOVEMENT_SPEED; el.style.transition=`top ${dur}s linear, left ${dur}s linear`; void el.offsetWidth; el.style.left=data.x+'%'; el.style.top=data.y+'%'; el.style.zIndex=Math.floor(data.y); el.setAttribute('data-dir', data.direction); if(dur>0){ if(!el.classList.contains('walking'))el.classList.add('walking'); if(el.walkTimeout)clearTimeout(el.walkTimeout); el.walkTimeout=setTimeout(()=>{el.classList.remove('walking'); if(data.id===myId){isPlayerMoving=false; gameArea.classList.remove('locked'); if(data.x<12&&data.y>25&&data.y<75){setTimeout(()=>window.location.href='/forest?from=lobby&userId=<%= user._id %>',120);}}}, dur*1000); } } });
        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if(el) el.remove(); });
        socket.on('chat_message', (data) => { const p = document.getElementById(`p-${data.id}`); if(p) { const b=document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; p.appendChild(b); setTimeout(()=>b.remove(),4000); } });
        function createPlayerElement(p) { const div=document.createElement('div'); div.id=`p-${p.id}`; div.className='player'; div.style.left=p.x+'%'; div.style.top=p.y+'%'; div.style.zIndex=Math.floor(p.y); div.setAttribute('data-dir', p.direction||'down'); if(p.sprite) { const img=document.createElement('img'); img.src=resolveImg(p.sprite); img.style.cssText='width:48px;height:48px;object-fit:contain;image-rendering:pixelated;'; div.appendChild(img); } else { div.style.backgroundImage=`url('/uploads/${p.skin||"char1"}.png')`; } const l=document.createElement('div'); l.className='player-name'; l.innerText=p.name; div.appendChild(l); gameArea.appendChild(div); if(p.id===myId)playerElement=div; }
        gameArea.addEventListener('click', (e) => { if(isPlayerMoving||e.target.classList.contains('machine'))return; const r=gameArea.getBoundingClientRect(); const tX=((e.clientX-r.left)/r.width)*100, tY=((e.clientY-r.top)/r.height)*100; if(tY<16&&tX>15)return; isPlayerMoving=true; gameArea.classList.add('locked'); socket.emit('move_player', {x:tX, y:tY}); });
        function moveToAndInteract(ev, el, type) { ev.stopPropagation(); if(isPlayerMoving)return; const r=gameArea.getBoundingClientRect(), tr=el.getBoundingClientRect(), tX=((tr.left-r.left+tr.width/2)/r.width)*100; let tY=24; if(el.id==='pc-battle'||el.id==='pc-lab') tY=((tr.bottom-r.top)/r.height)*100-5; const my=document.getElementById(`p-${myId}`); let time=0; isPlayerMoving=true; gameArea.classList.add('locked'); if(my){const cL=parseFloat(my.style.left), cT=parseFloat(my.style.top), d=Math.sqrt((tX-cL)**2+(tY-cT)**2); time=(d/MOVEMENT_SPEED)*1000;} socket.emit('move_player', {x:tX, y:tY}); setTimeout(()=>{ if(type==='admin')window.location.href='/lab?userId=<%= user._id %>'; else if(type==='market')openShop(); else if(type==='heal')healTeam(); else if(type==='gym_closed')showToast('Fechado.'); else if(type==='battle')openModal('modalBattle'); }, time); }
        async function healTeam() { try{await fetch('/api/heal', {method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({userId:'<%= user._id %>'})}); showToast('Curado!'); if(document.getElementById('modalTeam').style.display==='flex')openBag();}catch(e){showToast('Erro');} }
        function startSearch() { const fid=document.getElementById('onlineFighter').value, bet=document.getElementById('betAmount').value; socket.emit('find_match', fid, '<%= user._id %>', myName, mySkin, bet); document.getElementById('searchStatus').style.display='block'; }
        function cancelSearch() { socket.emit('cancel_match'); document.getElementById('searchStatus').style.display='none'; }
        socket.on('match_found', (data) => { document.getElementById('formRoomId').value=data.roomId; document.getElementById('formMeData').value=JSON.stringify(data.me); document.getElementById('formOpponentData').value=JSON.stringify(data.opponent); document.getElementById('onlineRedirectForm').submit(); });
        function validateBattleForm() { if(!document.getElementById('f1').value){alert('Selecione!'); return false;} return true; }
        function openWatchTab() { switchTab('tab-watch'); socket.emit('request_active_battles'); }
        socket.on('active_battles_list', (l) => { const c=document.getElementById('battlesList'); if(!l.length){c.innerHTML='Vazio';return;} c.innerHTML=l.map(b=>`<div>${b.p1Name} vs ${b.p2Name} <button onclick="spectate('${b.id}')">Ver</button></div>`).join(''); });
        function spectate(id){ document.getElementById('specRoomId').value=id; document.getElementById('spectateForm').submit(); }
    </script>
</body>
</html>
