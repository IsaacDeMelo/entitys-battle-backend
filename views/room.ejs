    <script>
        const socket = io();
        const myName = "<%= playerName %>";
        const mySkin = "<%= playerSkin %>";
        window.CURRENT_USER_ID = "<%= user._id %>"; 
        window.DEFEATED_NPCS = <%- JSON.stringify(user.defeatedNPCs || []) %>;
        window.isPlayerMoving = false;
        window.isInteracting = false;

        // Esta p√°gina j√° renderiza NPCs com movimento suave.
        window.DISABLE_GLOBAL_NPC_RENDER = true;
    </script>
    <script src="/scripts/common.js"></script>

    <script>
        const gameArea = document.getElementById('gameArea');
        let myId = null; const MOVEMENT_SPEED = 55;
        const NPC_SERVER_TICK_S = 0.35; // precisa bater com NPC_PATROL_TICK_MS do servidor
        let currentNpcsCache = [];
        const chatInput = document.getElementById('chatInput'); const chatBtn = document.getElementById('chatSend');
        const urlParams = new URLSearchParams(window.location.search);
        
        const spawnFrom = urlParams.get('from');
        const returnX = urlParams.get('x');
        const returnY = urlParams.get('y');

        function sendChat() { const msg = chatInput.value.trim(); if (msg) { socket.emit('send_chat', msg); chatInput.value = ''; chatInput.blur(); } }
        chatBtn.addEventListener('click', (e) => { e.stopPropagation(); sendChat(); }); chatInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') sendChat(); }); chatInput.addEventListener('click', (e) => { e.stopPropagation(); });

        socket.on('connect', () => { 
            myId = socket.id; 
            let initialX = returnX ? parseFloat(returnX) : 50; 
            let initialY = returnY ? parseFloat(returnY) : 50; 
            let initialDir = 'down'; 
            if(!returnX && !returnY && spawnFrom === 'forest') { initialX = 10; initialY = 50; initialDir = 'right'; } 
            socket.emit('enter_map', { userId: '<%= user._id %>', name: myName, skin: mySkin, map: 'lobby', x: initialX, y: initialY, direction: initialDir }); 
        });
        
        socket.on('map_state', (players) => { document.querySelectorAll('.player:not(.npc-entity)').forEach(el => el.remove()); players.forEach(p => createPlayerElement(p)); hideLoading(); });
        socket.on('player_joined', (p) => { if(p.id !== myId) createPlayerElement(p); });
        socket.on('duplicate_session', (info) => { showToast('Sess√£o desconectada: outra entrada com esta conta.'); setTimeout(() => { window.location.href = '/'; }, 1800); });
        
        socket.on('player_moved', (data) => { 
            const el = document.getElementById(`p-${data.id}`); 
            if (el) { 
                const currentLeft = parseFloat(el.style.left) || 50; const currentTop = parseFloat(el.style.top) || 50; 
                const dx = data.x - currentLeft; const dy = data.y - currentTop; 
                const distance = Math.sqrt(dx*dx + dy*dy); const duration = distance > 0 ? distance / MOVEMENT_SPEED : 0; 
                el.style.transition = `top ${duration}s linear, left ${duration}s linear`; 
                void el.offsetWidth; 
                el.style.left = data.x + '%'; el.style.top = data.y + '%'; el.style.zIndex = Math.floor(data.y); 
                el.setAttribute('data-dir', data.direction); 
                if (duration > 0) { 
                    if (!el.classList.contains('walking')) el.classList.add('walking'); 
                    if (el.walkTimeout) clearTimeout(el.walkTimeout); 
                    el.walkTimeout = setTimeout(() => { 
                        el.classList.remove('walking'); 
                        if (data.id === myId) { 
                            window.isPlayerMoving = false; 
                            gameArea.classList.remove('locked'); 
                            if (data.x < 12 && data.y > 25 && data.y < 75) { showLoading('Indo para a floresta...', 'left'); setTimeout(() => { window.location.href = '/forest?from=lobby&userId=<%= user._id %>'; }, 120); } 
                        } 
                    }, duration * 1000); 
                } 
            } 
        });
        
        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if (el) el.remove(); });
        socket.on('chat_message', (data) => { const p = document.getElementById(`p-${data.id}`); if(p) { const b = document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; p.appendChild(b); setTimeout(()=>b.remove(),4000); }});

        function getSafeTarget(currX, currY, targetX, targetY) {
            const steps = 25;
            for (let i = 1; i <= steps; i++) {
                const t = i / steps;
                const px = currX + (targetX - currX) * t;
                const py = currY + (targetY - currY) * t;
                const hitNpc = (currentNpcsCache || []).some(n => {
                    if (!n || !n.blocksMovement) return false;
                    const nx = typeof n.x === 'number' ? n.x : parseFloat(n.x) || 0;
                    const ny = typeof n.y === 'number' ? n.y : parseFloat(n.y) || 0;
                    return Math.abs(px - nx) <= 2.2 && Math.abs(py - ny) <= 2.2;
                });
                if (hitNpc) {
                    const tPrev = (i - 1) / steps;
                    return { x: currX + (targetX - currX) * tPrev, y: currY + (targetY - currY) * tPrev };
                }
            }
            return { x: targetX, y: targetY };
        }

        socket.on('npcs_list', (npcs) => {
            const list = Array.isArray(npcs) ? npcs : [];
            currentNpcsCache = list;

            const seen = new Set();
            list.forEach(npc => {
                if (!npc || !npc._id) return;
                const npcId = String(npc._id);
                seen.add(npcId);

                let div = document.getElementById(`npc-${npcId}`);
                const isNew = !div;
                if (!div) {
                    div = document.createElement('div');
                    div.className = 'player npc-entity';
                    div.id = `npc-${npcId}`;
                    gameArea.appendChild(div);

                    div.addEventListener('click', (e) => {
                        e.stopPropagation();
                        if (window.isPlayerMoving || window.isInteracting) return;
                        const id = (div.id || '').replace('npc-', '');
                        const found = (currentNpcsCache || []).find(n => n && String(n._id) === String(id));
                        if (found && typeof moveToAndTalkToNPC === 'function') moveToAndTalkToNPC(found);
                    });
                }

                const skinUrl = (npc.skin && (npc.skin.startsWith('http') || npc.skin.startsWith('data:')))
                    ? npc.skin
                    : `/uploads/${npc.skin || 'char1'}.png`;
                if (div.dataset.skinUrl !== skinUrl) {
                    div.style.backgroundImage = `url('${skinUrl}')`;
                    div.dataset.skinUrl = skinUrl;
                }

                const displayName = String(npc.name || 'NPC').replace(/\(kid\)/i, '').trim();
                let label = div.querySelector('.player-name');
                if (!label) {
                    label = document.createElement('div');
                    label.className = 'player-name';
                    div.appendChild(label);
                }
                if (label.innerText !== displayName) label.innerText = displayName;

                const targetX = (typeof npc.x === 'number') ? npc.x : parseFloat(npc.x) || 50;
                const targetY = (typeof npc.y === 'number') ? npc.y : parseFloat(npc.y) || 50;
                const currentLeft = parseFloat(div.style.left);
                const currentTop = parseFloat(div.style.top);

                if (isNew || !Number.isFinite(currentLeft) || !Number.isFinite(currentTop)) {
                    div.style.transition = 'none';
                    div.style.left = targetX + '%';
                    div.style.top = targetY + '%';
                } else {
                    const distance = Math.hypot(targetX - currentLeft, targetY - currentTop);
                    if (distance > 25) {
                        div.style.transition = 'none';
                        div.style.left = targetX + '%';
                        div.style.top = targetY + '%';
                        div.classList.remove('walking');
                    } else {
                        const duration = distance > 0 ? Math.max((distance / MOVEMENT_SPEED), NPC_SERVER_TICK_S) : 0;
                        div.style.transition = `top ${duration}s linear, left ${duration}s linear`;
                        void div.offsetWidth;
                        div.style.left = targetX + '%';
                        div.style.top = targetY + '%';
                        if (duration > 0.01) {
                            div.classList.add('walking');
                            if (div.walkTimeout) clearTimeout(div.walkTimeout);
                            div.walkTimeout = setTimeout(() => div.classList.remove('walking'), (duration * 1000) + 50);
                        }
                    }
                }

                div.style.zIndex = Math.floor(targetY);
                div.setAttribute('data-dir', npc.direction || 'down');
            });

            document.querySelectorAll('.npc-entity').forEach(el => {
                const id = (el.id || '').replace('npc-', '');
                if (!seen.has(id)) el.remove();
            });
        });
        
        function moveToAndInteract(event, element, type) { 
            event.stopPropagation(); 
            if (window.isPlayerMoving || window.isInteracting) return; 
            const rect = gameArea.getBoundingClientRect(); 
            const targetRect = element.getBoundingClientRect(); 
            const centerXpx = (targetRect.left - rect.left) + (targetRect.width / 2); 
            let targetY = 24; 
            if (element.id === 'pc-battle' || element.id === 'pc-lab') { const bottomYpx = (targetRect.bottom - rect.top); targetY = (bottomYpx / rect.height) * 100 - 5; }
            const targetX = (centerXpx / rect.width) * 100; 
            const myEl = document.getElementById(`p-${myId}`); 
            let travelTime = 0; 
            window.isPlayerMoving = true; 
            gameArea.classList.add('locked'); 
            const currentLeft = myEl ? (parseFloat(myEl.style.left) || 50) : targetX;
            const currentTop = myEl ? (parseFloat(myEl.style.top) || 50) : targetY;
            const safe = getSafeTarget(currentLeft, currentTop, targetX, targetY);
            const dist = Math.hypot(safe.x - currentLeft, safe.y - currentTop);
            travelTime = (dist / MOVEMENT_SPEED) * 1000;
            socket.emit('move_player', { x: safe.x, y: safe.y }); 
            setTimeout(() => { 
                if (type === 'create') { showLoading('Carregando cria√ß√£o...', 'left'); setTimeout(() => window.location.href = `/create?playerName=${encodeURIComponent(myName)}&playerSkin=${encodeURIComponent(mySkin)}`, 120); } 
                else if (type === 'admin') { showLoading('Carregando...', 'left'); setTimeout(() => window.location.href = '/lab?userId=<%= user._id %>', 120); } 
                else if (type === 'market') { openShop(); } 
                else if (type === 'heal') healTeam(); 
                else if (type === 'gym_closed') { showToast('‚õî Gin√°sio fechado temporariamente.'); }
                else if (type === 'online' || type === 'battle') { updateBattleSelect(); openModal('modalBattle'); }
            }, travelTime); 
        }

        async function healTeam() { 
            try { 
                const res = await fetch('/api/heal', { 
                    method: 'POST', 
                    headers: { 'Content-Type': 'application/json' }, 
                    body: JSON.stringify({ userId: '<%= user._id %>' }) 
                }); 
                const data = await res.json(); 
                if (data && data.success) { 
                    showToast(data.message || 'Equipe curada!'); 
                    // Tenta abrir a bolsa se o modal de time estiver vis√≠vel (requer common.js ou menu)
                    const modalTeam = document.getElementById('modalTeam');
                    if (modalTeam && modalTeam.style.display === 'flex' && typeof openBag === 'function') openBag(); 
                } else { 
                    showToast(data.error || 'Erro ao curar'); 
                } 
            } catch (e) { showToast('Erro ao conectar ao servidor'); } 
        }

        // --- FUN√á√ïES DE LOJA ---
        function openShop() { openModal('modalShop'); }
        async function buyItem(itemId) {
            try {
                const res = await fetch('/api/buy-item', {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ userId: '<%= user._id %>', itemId: itemId, qty: 1 })
                });
                const data = await res.json();
                if (data.success) showToast('Compra realizada!');
                else showToast(data.error || 'Erro na compra.');
            } catch (e) { showToast('Erro de conex√£o.'); }
        }

        async function updateBattleSelect() { try { const res = await fetch('/api/me?userId=<%= user._id %>'); const data = await res.json(); const team = data.team || []; const select1 = document.getElementById('f1'); const selectOnline = document.getElementById('onlineFighter'); let html = '<option value="" disabled selected>Escolha...</option>'; if(team.length === 0) html = '<option value="" disabled>Sem Pok√©mons</option>'; else team.forEach(p => { html += `<option value="${p.instanceId}">${p.name} (Lv.${p.level})</option>`; }); if(select1) select1.innerHTML = html; if(selectOnline) selectOnline.innerHTML = html; } catch(e) { console.error("Erro ao atualizar select de batalha", e); } }
        
        function startSearch() { const fid = document.getElementById('onlineFighter').value; if(!fid) { showToast("Escolha um Pok√©mon!"); return; } const bet = Number(document.getElementById('betAmount') ? document.getElementById('betAmount').value : 0) || 0; socket.emit('find_match', fid, '<%= user._id %>', myName, mySkin, bet); document.getElementById('searchStatus').style.display='block'; document.getElementById('btnSearch').style.display='none'; document.getElementById('btnCancelSearch').style.display='block'; }
        
        socket.on('search_error', (msg) => { showToast('Erro: ' + msg); cancelSearch(); });

        function openWatchTab() { switchTab('tab-watch'); socket.emit('request_active_battles'); }
        socket.on('active_battles_list', (list) => { const container = document.getElementById('battlesList'); if(!container) return; if(!list || list.length === 0) { container.innerHTML = '<div style="text-align:center; color:#aaa;">Sem lutas ativas</div>'; return; } let html = ''; list.forEach(b => { html += `<div style="display:flex; align-items:center; gap:10px; padding:8px; border-bottom:1px solid #222;"><div style="flex:1;"><div style="font-weight:bold; color:#f1c40f">${b.p1Name} vs ${b.p2Name}</div><div style="font-size:0.8rem; color:#aaa">Sala: ${b.id}</div></div><div><button onclick="spectate('${b.id}')" style="padding:8px; background:#2ecc71; border:none; border-radius:6px; color:#000">ESPECTAR</button></div></div>`; }); container.innerHTML = html; });
        function spectate(roomId) { document.getElementById('specRoomId').value = roomId; document.getElementById('spectateForm').submit(); }
        function cancelSearch() { socket.emit('cancel_match'); document.getElementById('searchStatus').style.display='none'; document.getElementById('btnSearch').style.display='block'; document.getElementById('btnCancelSearch').style.display='none'; }
        socket.on('match_found', (data) => { document.getElementById('formRoomId').value = data.roomId; document.getElementById('formMeData').value = JSON.stringify(data.me); document.getElementById('formOpponentData').value = JSON.stringify(data.opponent); showLoading('Conectando...', 'left'); document.getElementById('onlineRedirectForm').submit(); });
        function validateBattleForm() { const f1 = document.getElementById('f1').value; if(!f1) { alert("Selecione seu lutador!"); return false; } return true; }
        document.addEventListener('DOMContentLoaded', () => { const localForm = document.querySelector('#modalBattle form'); if (localForm) localForm.addEventListener('submit', () => { showLoading('Iniciando batalha...'); }); });
        
        function switchTab(tabId) { document.querySelectorAll('.tab-content').forEach(c => c.style.display = 'none'); document.getElementById(tabId).style.display = 'block'; document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active')); event.target.classList.add('active'); }
        function showLoading(msg = 'Carregando...', dir) { const loader = document.getElementById('loader'); if (!loader) return; const text = loader.querySelector('.loader-text'); if (text) text.innerText = msg; if (dir) loader.setAttribute('data-dir', dir); loader.classList.add('show'); loader.setAttribute('aria-hidden', 'false'); }
        function hideLoading() { const loader = document.getElementById('loader'); if (!loader) return; loader.classList.remove('show'); loader.removeAttribute('data-dir'); loader.setAttribute('aria-hidden', 'true'); }
        window.addEventListener('beforeunload', () => { showLoading(); });
        
        function createPlayerElement(p) { 
            const div = document.createElement('div'); div.id = `p-${p.id}`; div.className = 'player'; div.style.left = p.x + '%'; div.style.top = p.y + '%'; div.style.zIndex = Math.floor(p.y); div.setAttribute('data-dir', p.direction || 'down'); 
            if (p.sprite) { 
                const img = document.createElement('img'); img.src = p.sprite.startsWith('http') || p.sprite.startsWith('data:') ? p.sprite : ('/uploads/' + p.sprite); img.style.width = '48px'; img.style.height = '48px'; img.style.objectFit = 'contain'; img.style.imageRendering = 'pixelated'; img.style.pointerEvents = 'none'; div.appendChild(img); div.style.backgroundImage = 'none'; 
            } else { 
                const skinName = p.skin || 'char1'; div.style.backgroundImage = `url('/uploads/${skinName}.png')`; 
            } 
            const label = document.createElement('div'); label.className = 'player-name'; label.innerText = p.name; div.appendChild(label); 
            
            // √çcone do planeta para busca online
            if(p.isSearching) { 
                const container = document.createElement('div'); container.className = 'searching-indicator';
                const ring1 = document.createElement('div'); ring1.className = 'radar-ring';
                const ring2 = document.createElement('div'); ring2.className = 'radar-ring';
                const icon = document.createElement('div'); icon.className = 'planet-icon'; icon.innerText = 'üåé';
                container.appendChild(ring1); container.appendChild(ring2); container.appendChild(icon);
                div.appendChild(container);
            }
            gameArea.appendChild(div); if (p.id === myId) playerElement = div; 
        }
        
        gameArea.addEventListener('click', (e) => { 
            if (window.isPlayerMoving || window.isInteracting || e.target.classList.contains('machine')) return; 
            const rect = gameArea.getBoundingClientRect(); 
            const targetX = ((e.clientX - rect.left) / rect.width) * 100; 
            const targetY = ((e.clientY - rect.top) / rect.height) * 100; 
            if (targetY < 16 && targetX > 15) { return; }
            const myEl = document.getElementById(`p-${myId}`);
            const currX = myEl ? (parseFloat(myEl.style.left) || 50) : targetX;
            const currY = myEl ? (parseFloat(myEl.style.top) || 50) : targetY;
            const safe = getSafeTarget(currX, currY, targetX, targetY);
            window.isPlayerMoving = true; 
            gameArea.classList.add('locked'); 
            socket.emit('move_player', { x: safe.x, y: safe.y }); 
        });
    </script>
