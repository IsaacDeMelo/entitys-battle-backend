    <form id="onlineRedirectForm" action="/battle/online" method="POST" style="display:none;"><input type="hidden" name="roomId" id="formRoomId"><input type="hidden" name="meData" id="formMeData"><input type="hidden" name="opponentData" id="formOpponentData"></form>
    
    <script>
        // UTILIDADES (NO TOPO)
        function showToast(msg) { const container = document.getElementById('toastContainer'); const toast = document.createElement('div'); toast.className = 'toast'; toast.innerText = msg; container.appendChild(toast); setTimeout(() => { toast.style.opacity = '0'; setTimeout(() => toast.remove(), 500); }, 3000); }
        function resolveImg(src) { return (src.startsWith('http') || src.startsWith('data:')) ? src : '/uploads/' + src; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }
        function openModal(id) { document.getElementById(id).style.display = 'flex'; if(id==='modalPokedex' && allMonsters.length>0) selectDexMonster(0, document.querySelector('.dex-card')); }

        const socket = io();
        const myName = "<%= playerName %>";
        const mySkin = "<%= playerSkin %>";
        const gameArea = document.getElementById('gameArea');
        const allMonsters = <%- JSON.stringify(entities) %>;
        let myId = null; const MOVEMENT_SPEED = 55; let isPlayerMoving = false;
        const chatInput = document.getElementById('chatInput'); const chatBtn = document.getElementById('chatSend');
        
        const urlParams = new URLSearchParams(window.location.search);
        const spawnFrom = urlParams.get('from');

        function sendChat() { const msg = chatInput.value.trim(); if (msg) { socket.emit('send_chat', msg); chatInput.value = ''; chatInput.blur(); } }
        chatBtn.addEventListener('click', (e) => { e.stopPropagation(); sendChat(); }); chatInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') sendChat(); }); chatInput.addEventListener('click', (e) => { e.stopPropagation(); });
        
        socket.on('connect', () => { 
            myId = socket.id; 
            let initialX = 50; let initialY = 50;
            if(spawnFrom === 'forest') { initialX = 5; initialY = 50; } 
            socket.emit('enter_map', { name: myName, skin: mySkin, map: 'lobby', x: initialX, y: initialY }); 
        });

        socket.on('map_state', (players) => { document.querySelectorAll('.player').forEach(el => el.remove()); players.forEach(p => createPlayerElement(p)); });
        socket.on('player_joined', (p) => { if(p.id !== myId) createPlayerElement(p); });
        
        socket.on('player_updated', (p) => {
            const el = document.getElementById(`p-${p.id}`);
            if(el) {
                const existingPlanet = el.querySelector('.searching-planet');
                if(p.isSearching) {
                    if(!existingPlanet) {
                        const planet = document.createElement('div');
                        planet.className = 'searching-planet';
                        planet.innerText = 'üåé';
                        el.appendChild(planet);
                    }
                } else {
                    if(existingPlanet) existingPlanet.remove();
                }
            }
        });

        socket.on('search_error', (msg) => { alert(msg); cancelSearch(); });

        socket.on('player_moved', (data) => {
            const el = document.getElementById(`p-${data.id}`);
            if (el) {
                const currentLeft = parseFloat(el.style.left) || 50; const currentTop = parseFloat(el.style.top) || 50;
                const dx = data.x - currentLeft; const dy = data.y - currentTop;
                const distance = Math.sqrt(dx*dx + dy*dy); const duration = distance > 0 ? distance / MOVEMENT_SPEED : 0;
                el.style.transition = `top ${duration}s linear, left ${duration}s linear`; void el.offsetWidth; 
                el.style.left = data.x + '%'; el.style.top = data.y + '%'; el.style.zIndex = Math.floor(data.y); el.setAttribute('data-dir', data.direction);
                if (duration > 0) { 
                    if (!el.classList.contains('walking')) el.classList.add('walking'); 
                    if (el.walkTimeout) clearTimeout(el.walkTimeout); 
                    el.walkTimeout = setTimeout(() => { 
                        el.classList.remove('walking'); 
                        if (data.id === myId) { 
                            isPlayerMoving = false; 
                            gameArea.classList.remove('locked'); 
                            if (data.x < 5 && data.y > 40 && data.y < 60) { window.location.href = '/forest?from=lobby&userId=<%= user._id %>'; }
                        } 
                    }, duration * 1000); 
                }
            }
        });
        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if (el) el.remove(); });
        socket.on('chat_message', (data) => { const p = document.getElementById(`p-${data.id}`); if(p) { const b = document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; p.appendChild(b); setTimeout(()=>b.remove(),4000); }});
        
        function createPlayerElement(p) { 
            const div = document.createElement('div'); div.id = `p-${p.id}`; div.className = 'player'; div.style.left = p.x + '%'; div.style.top = p.y + '%'; div.style.zIndex = Math.floor(p.y); div.setAttribute('data-dir', p.direction || 'down'); div.style.backgroundImage = `url('/uploads/${p.skin || "char1"}.png')`; 
            const label = document.createElement('div'); label.className = 'player-name'; label.innerText = p.name; div.appendChild(label); 
            if(p.isSearching) {
                const planet = document.createElement('div'); planet.className = 'searching-planet'; planet.innerText = 'üåé'; div.appendChild(planet);
            }
            gameArea.appendChild(div); 
            if (p.id === myId) playerElement = div; 
        }
        
        gameArea.addEventListener('click', (e) => { if (isPlayerMoving || e.target.classList.contains('machine')) return; const rect = gameArea.getBoundingClientRect(); const targetX = ((e.clientX - rect.left) / rect.width) * 100; const targetY = ((e.clientY - rect.top) / rect.height) * 100; isPlayerMoving = true; gameArea.classList.add('locked'); socket.emit('move_player', { x: targetX, y: targetY }); });
        
        function moveToAndInteract(event, element, type) {
            event.stopPropagation(); if (isPlayerMoving) return;
            const rect = gameArea.getBoundingClientRect(); const targetRect = element.getBoundingClientRect();
            const centerXpx = (targetRect.left - rect.left) + (targetRect.width / 2); const targetYpx = (targetRect.bottom - rect.top) - 25; 
            const targetX = (centerXpx / rect.width) * 100; const targetY = (targetYpx / rect.height) * 100;
            const myEl = document.getElementById(`p-${myId}`); let travelTime = 0; isPlayerMoving = true; gameArea.classList.add('locked');
            if (myEl) { const currentLeft = parseFloat(myEl.style.left) || 50; const currentTop = parseFloat(myEl.style.top) || 50; const dist = Math.sqrt(Math.pow(targetX - currentLeft, 2) + Math.pow(targetY - currentTop, 2)); travelTime = (dist / MOVEMENT_SPEED) * 1000; }
            socket.emit('move_player', { x: targetX, y: targetY }); 
            setTimeout(() => {
                if (type === 'create') window.location.href = `/create?playerName=${encodeURIComponent(myName)}&playerSkin=${encodeURIComponent(mySkin)}`;
                else if (type === 'admin') window.location.href = '/lab?userId=<%= user._id %>';
                else if (type === 'pokedex') openModal('modalPokedex');
                else if (type === 'heal') healTeam();
                else if (type === 'online' || type === 'battle') openModal('modalBattle');
            }, travelTime);
        }

        // BAG & LEAD SYSTEM
        let currentMoves = [];
        let currentPokeId = null;

        async function openBag() {
            document.getElementById('modalTeam').style.display='flex';
            const content = document.getElementById('teamListContent');
            content.innerHTML = 'Carregando...';
            try {
                const res = await fetch('/api/me?userId=<%= user._id %>');
                const data = await res.json();
                if(!data.team || data.team.length === 0) { content.innerHTML = '<p style="text-align:center">Vazio.</p>'; return; }
                
                let html = '';
                data.team.forEach((p, index) => {
                    const hpPct = Math.max(0, Math.min(100, (p.hp / p.maxHp) * 100));
                    const xpPct = (p.xpToNext && p.xp !== undefined) ? Math.max(0, Math.min(100, (p.xp / p.xpToNext) * 100)) : 0;
                    const safeSprite = resolveImg(p.sprite);
                    const isLead = index === 0;
                    
                    html += `
                    <div class="team-list-item" style="${isLead ? 'border: 2px solid #f1c40f;' : ''}">
                        <div onclick="showMoveEditor('${p.instanceId}', '${p.name}', ${JSON.stringify(p.moves).replace(/"/g, '&quot;')}, ${JSON.stringify(p.learnedMoves).replace(/"/g, '&quot;')})" style="display:flex; align-items:center; gap:10px; flex:1;">
                            <img src="${safeSprite}" class="team-sprite">
                            <div class="team-info">
                                <div style="font-weight:bold; color:#f1c40f">${p.name} <span style="font-size:0.8rem; color:#aaa">Lv.${p.level}</span></div>
                                <div style="font-size:0.8rem; margin-top:2px;">HP: ${p.hp}/${p.maxHp}</div>
                                <div class="team-bar"><div class="team-fill" style="width:${hpPct}%"></div></div>
                                <div style="font-size:0.75rem; margin-top:4px; color:#aaa;">XP: ${p.xp || 0}/${p.xpToNext || '‚Äî'}</div>
                                <div class="team-bar"><div style="height:100%; background: linear-gradient(90deg,#f1c40f,#f39c12); width:${xpPct}%"></div></div>
                            </div>
                        </div>
                        <div style="display:flex; flex-direction:column; align-items:center; gap:5px;">
                            ${!isLead ? `<button onclick="setLead('${p.instanceId}')" style="background:none; border:none; cursor:pointer; font-size:1.2rem;">‚≠ê</button>` : '<span style="font-size:1rem;">üëë</span>'}
                            <div style="font-size:1rem; cursor:pointer;" onclick="showMoveEditor('${p.instanceId}', '${p.name}', ${JSON.stringify(p.moves).replace(/"/g, '&quot;')}, ${JSON.stringify(p.learnedMoves).replace(/"/g, '&quot;')})">‚öôÔ∏è</div>
                        </div>
                    </div>`;
                });
                content.innerHTML = html;
            } catch(e) { content.innerHTML = 'Erro.'; }
        }

        async function setLead(pokeId) {
            const res = await fetch('/api/set-lead', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ userId: '<%= user._id %>', pokemonId: pokeId })
            });
            const data = await res.json();
            if(data.success) { showToast("Novo l√≠der definido!"); openBag(); }
        }

        function showMoveEditor(id, name, equipped, learned) {
            currentPokeId = id;
            const pool = (learned && learned.length > 0) ? learned : equipped;
            let html = `<h3 style="text-align:center; color:#3498db;">${name} - Golpes</h3><p style="font-size:0.7rem; color:#aaa; text-align:center;">Selecione at√© 4.</p><div style="display:flex; flex-wrap:wrap; gap:5px; margin-top:10px;">`;
            pool.forEach(moveId => {
                const isEquipped = equipped.includes(moveId);
                const style = isEquipped ? "background:#2ecc71; border-color:#27ae60;" : "background:#444; border-color:#555;";
                html += `<div onclick="toggleMove('${moveId}', this)" class="move-chip" style="padding:8px; border:2px solid; border-radius:5px; cursor:pointer; ${style}" data-id="${moveId}">${moveId}</div>`;
            });
            html += `</div><button onclick="saveMoves()" style="width:100%; padding:10px; margin-top:20px; background:#f1c40f; border:none; border-radius:5px; font-weight:bold; cursor:pointer;">SALVAR</button><button onclick="openBag()" style="width:100%; padding:10px; margin-top:5px; background:#555; border:none; border-radius:5px; cursor:pointer; color:white;">VOLTAR</button>`;
            document.getElementById('teamListContent').innerHTML = html;
        }

        function toggleMove(moveId, el) {
            const chips = document.querySelectorAll('.move-chip');
            let selected = [];
            chips.forEach(c => { if(c.style.background.includes('2ecc71')) selected.push(c); });
            if(el.style.background.includes('2ecc71')) {
                if(selected.length <= 1) return alert("Precisa de pelo menos 1 ataque!");
                el.style.background = '#444'; el.style.borderColor = '#555';
            } else {
                if(selected.length >= 4) return alert("M√°ximo de 4 ataques!");
                el.style.background = '#2ecc71'; el.style.borderColor = '#27ae60';
            }
        }

        async function saveMoves() {
            const chips = document.querySelectorAll('.move-chip');
            let finalMoves = [];
            chips.forEach(c => { if(c.style.background.includes('2ecc71')) finalMoves.push(c.getAttribute('data-id')); });
            const res = await fetch('/api/equip-move', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', pokemonId: currentPokeId, moves: finalMoves }) });
            const data = await res.json();
            if(data.success) { showToast("Golpes salvos!"); openBag(); } else { alert(data.error); }
        }

        function startSearch() { 
            const fid = document.getElementById('onlineFighter').value; 
            if(!fid) return alert("Escolha um Pok√©mon!");
            socket.emit('find_match', fid, '<%= user._id %>', myName, mySkin); 
            document.getElementById('searchStatus').style.display='block'; 
            document.getElementById('btnSearch').style.display='none';
            document.getElementById('btnCancelSearch').style.display='block';
        }

        function cancelSearch() {
            socket.emit('cancel_match');
            document.getElementById('searchStatus').style.display='none'; 
            document.getElementById('btnSearch').style.display='block';
            document.getElementById('btnCancelSearch').style.display='none';
        }

        socket.on('match_found', (data) => { document.getElementById('formRoomId').value = data.roomId; document.getElementById('formMeData').value = JSON.stringify(data.me); document.getElementById('formOpponentData').value = JSON.stringify(data.opponent); document.getElementById('onlineRedirectForm').submit(); });
        function filterDex() { const v = document.getElementById('dexSearch').value.toLowerCase(); document.querySelectorAll('.dex-card').forEach(c => c.style.display = c.getAttribute('data-name').includes(v) ? 'flex' : 'none'); }
        function selectDexMonster(i, el) { const m = allMonsters[i]; const safeSprite = resolveImg(m.sprite); document.querySelectorAll('.dex-card').forEach(c=>c.classList.remove('active')); el.classList.add('active'); let movesHTML = m.movePool ? m.movePool.map(mv => `<div>Lv.${mv.level}: ${mv.moveId}</div>`).join('') : 'None'; document.getElementById('dexDetailsView').innerHTML = `<h2>${m.name}</h2><img src="${safeSprite}" style="width:100px"><p>${m.type}</p><div>${movesHTML}</div>`; }
        function validateBattleForm() { const f1 = document.getElementById('f1').value; if(!f1) { alert("Selecione seu lutador!"); return false; } return true; }
        function getTypeColor(t) { const colors = { fire:'#e74c3c', water:'#3498db', plant:'#2ecc71', electric:'#f1c40f' }; return colors[t] || '#777'; }
    </script>
