<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Cidade Nova</title>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
        /* --- 1. RESET E BASE --- */
        * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; outline: none; }
        body { 
            margin: 0; padding: 0; background: #111; 
            overflow: hidden; 
            width: 100vw; height: 100vh; 
            font-family: 'Roboto', sans-serif; 
            user-select: none;
            touch-action: none;
        }

        /* --- 2. C√ÇMERA E MUNDO --- */
        #camera-viewport {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            background: #27ae60; /* Verde grama padr√£o */
        }

        #game-world {
            position: absolute;
            /* AUMENTO DA ESCALA:
               340vw de largura faz o mapa ser 3.4x maior que a tela do celular.
               A altura segue a propor√ß√£o da imagem (aprox 1:2.1).
               Isso faz o boneco (48px) parecer menor. */
            width: 340vw; 
            height: 720vw; 
            
            background-image: url('/uploads/city_map_large.png'); 
            background-size: 100% 100%;
            image-rendering: pixelated;
            
            transition: transform 0.1s linear;
            transform-origin: 0 0;
            box-shadow: inset 0 0 150px rgba(0,0,0,0.8);
        }

        /* --- 3. JOGADOR E NPCS --- */
        .player {
            position: absolute;
            width: 48px; height: 48px;
            margin-left: -24px; margin-top: -40px; /* Piv√¥ no p√© do boneco */
            background-size: 400% auto;
            image-rendering: pixelated;
            z-index: 10;
            transition: top 0s linear, left 0s linear;
            filter: drop-shadow(0 4px 4px rgba(0,0,0,0.5));
        }
        .player.walking { animation: walk 0.6s steps(4) infinite; }
        @keyframes walk { from { background-position-x: 0; } to { background-position-x: -400%; } }
        
        <% for(let i = 1; i <= skinCount; i++) { %> 
            .player[data-skin="char<%= i %>"] { background-image: url('/uploads/char<%= i %>.png'); } 
        <% } %>
        
        .player-name { 
            position: absolute; 
            top: -20px; 
            left: 50%; 
            transform: translateX(-50%); 
            background: rgba(0,0,0,0.7); 
            color: white; 
            padding: 4px 6px; 
            border-radius: 4px; 
            font-size: 0.55rem; /* Fonte menor para combinar com o mapa grande */
            white-space: nowrap; 
            pointer-events: none; 
            font-family: 'Press Start 2P', cursive; 
            text-shadow: 1px 1px 0 #000;
            border: 1px solid rgba(255,255,255,0.2);
        }

        .npc-entity { cursor: pointer; }
        .npc-entity .player-name { color: #f1c40f; border-color: #f39c12; }

        /* --- 4. ZONAS DE INTERA√á√ÉO & COLIS√ÉO (DEBUG) --- */
        .interaction-zone {
            position: absolute;
            background: rgba(255, 0, 0, 0.0); /* Mude para 0.4 para ver as colis√µes */
            z-index: 5;
        }
        /* Cursor pointer apenas para intera√ß√µes reais, n√£o para paredes */
        .clickable { cursor: pointer; }

        /* --- 5. UI LAYER (Interface Fixa) --- */
        #ui-layer { 
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            pointer-events: none; z-index: 100; 
        }

        .menu-wrapper {
            pointer-events: auto; 
            position: absolute; top: 0; left: 0; width: 100%;
        }

        #chatBar { 
            position: fixed; bottom: max(20px, env(safe-area-inset-bottom) + 15px); 
            left: 50%; transform: translateX(-50%); width: 90%; max-width: 450px; 
            display: flex; align-items: center; gap: 8px; 
            pointer-events: auto;
            background: #1a1a2e; border: 2px solid #3498db; padding: 8px; border-radius: 50px; 
            box-shadow: 0 4px 10px rgba(0,0,0,0.5);
        }
        #chatInput { flex: 1; padding: 5px 10px; border: none; background: transparent; color: white; outline: none; font-family: 'Roboto', sans-serif; font-size: 1rem; }
        #chatSend { width: 40px; height: 40px; border-radius: 50%; border: none; background: linear-gradient(135deg, #f1c40f, #f39c12); color: #1a1a2e; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 1.2rem; margin: 0; }
        
        .chat-bubble { 
            position: absolute; bottom: 50px; left: 50%; transform: translateX(-50%); 
            background: white; color: black; padding: 6px 10px; border-radius: 8px; 
            border: 2px solid #333; font-size: 0.7rem; white-space: nowrap; z-index: 1000; 
            font-family: 'Press Start 2P', cursive;
            animation: popIn 0.2s forwards; box-shadow: 0 4px 0 rgba(0,0,0,0.2);
        }
        .chat-bubble::after {
            content: ''; position: absolute; bottom: -6px; left: 50%; transform: translateX(-50%);
            border-width: 6px 6px 0; border-style: solid; border-color: #333 transparent transparent transparent;
        }
        @keyframes popIn { from { transform: translateX(-50%) scale(0); opacity: 0; } to { transform: translateX(-50%) scale(1); opacity: 1; } }

        /* --- 6. LOADER E MODAIS --- */
        .loader-overlay { position: fixed; inset: 0; display:flex; align-items:center; justify-content:center; background: rgba(0,0,0,0.9); z-index: 99999; opacity: 0; pointer-events: none; transition: opacity .35s ease; }
        .loader-overlay.show { opacity: 1; pointer-events: auto; }
        .loader-box { background: linear-gradient(135deg,#0b1622,#071018); border: 1px solid rgba(255,255,255,0.05); padding: 20px 26px; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.6); transform: translateY(8px); opacity: 0; transition: transform .35s ease, opacity .35s ease; display:flex; align-items:center; gap:12px; color:#fff; font-family:'Press Start 2P'; }
        .loader-overlay.show .loader-box { transform: translateY(0); opacity: 1; }
        .spinner { width: 28px; height: 28px; border-radius: 50%; border: 4px solid rgba(255,255,255,0.08); border-top-color: #f1c40f; animation: spin 1s linear infinite; }
        @keyframes spin { to { transform: rotate(360deg); } }
        .loader-text { font-size: 0.8rem; color:#f1c40f; }

        .modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.85); z-index: 3000; display: none; justify-content: center; align-items: center; backdrop-filter: blur(5px); pointer-events: auto; }
        .modal-content { background: #1a1a2e; width: 90%; max-width: 400px; padding: 20px; border-radius: 15px; border: 1px solid #3498db; color: white; position: relative; box-shadow: 0 0 20px rgba(52, 152, 219, 0.3); }
        .close-btn { position: absolute; top: 10px; right: 10px; background: #e74c3c; border: none; color: white; width: 30px; height: 30px; border-radius: 50%; cursor: pointer; font-weight: bold; display: flex; align-items: center; justify-content: center; }
    </style>
</head>
<body>

    <div id="camera-viewport">
        <div id="game-world">
            
            <!-- ZONAS DE INTERA√á√ÉO (Clic√°veis) -->
            <div id="zone-heal" class="interaction-zone clickable" onclick="interact('heal')" style="top: 6.5%; left: 60%; width: 15%; height: 6%;"></div>
            <div id="zone-shop" class="interaction-zone clickable" onclick="interact('shop')" style="top: 39%; left: 24%; width: 16%; height: 6%;"></div>
            <div id="zone-exit" class="interaction-zone clickable" onclick="goToForest()" style="top: 98%; left: 40%; width: 20%; height: 2%;"></div>

            <!-- MATINHOS (Invis√≠veis mas detect√°veis) -->
            <div id="city_grass1" class="interaction-zone grass-patch" style="top: 2%; left: 26%; width: 14%; height: 10%;"></div>
            <div id="city_grass2" class="interaction-zone grass-patch" style="top: 90%; left: 4%; width: 14%; height: 8%;"></div>

            <!-- BLOQUEIOS (Paredes/Casas - N√£o Clic√°veis, apenas l√≥gica) -->
            <!-- Ajuste fino: Reduzi um pouco a altura visual para dar efeito de profundidade (andar atr√°s da casa) -->
            <div class="interaction-zone blocked" style="top: 35%; left: 24%; width: 16%; height: 10%;"></div> <!-- Loja F√≠sica -->
            <div class="interaction-zone blocked" style="top: 4%; left: 60%; width: 15%; height: 8%;"></div> <!-- Centro PKMN -->
            
            <!-- Exemplo de outras casas bloqueadas baseadas no layout do grid -->
            <div class="interaction-zone blocked" style="top: 4%; left: 4%; width: 15%; height: 8%;"></div> <!-- Casa Azul Topo Esq -->
            <div class="interaction-zone blocked" style="top: 19%; left: 24%; width: 16%; height: 10%;"></div> <!-- Casa Vermelha -->
            <div class="interaction-zone blocked" style="top: 65%; left: 60%; width: 16%; height: 10%;"></div> <!-- Casa Laranja -->

        </div>
    </div>

    <div id="ui-layer">
        <div class="menu-wrapper"><%- include('partials/menu') %></div>
        <div id="chatBar">
            <input type="text" id="chatInput" placeholder="Mensagem..." autocomplete="off" maxlength="30">
            <button id="chatSend">üí¨</button>
        </div>
    </div>
    
    <div id="loader" class="loader-overlay show"><div class="loader-box"><div class="spinner"></div><div class="loader-text">Carregando mapa...</div></div></div>
    <!-- Container Global para Toasts do common.js -->
    <div id="global-toast-container"></div>

    <!-- MODAL LOJA -->
    <div class="modal-overlay" id="modalShop">
        <div class="modal-content">
            <button class="close-btn" onclick="document.getElementById('modalShop').style.display='none'">X</button>
            <h2 style="text-align:center; color:#f1c40f; font-family:'Press Start 2P'; margin-bottom:20px;">LOJA</h2>
            <div style="background:#0b1220; padding:15px; border-radius:8px; margin-bottom:10px; display:flex; align-items:center; gap:10px;">
                <img src="/uploads/catchcube.gif" style="width:40px; height:40px; object-fit:contain;">
                <div style="flex:1;">
                    <div style="font-weight:bold; color:#fff;">CatchCube</div>
                    <div style="font-size:0.8rem; color:#aaa;">Captura monstros.</div>
                    <div style="color:#f1c40f; margin-top:5px;">$50</div>
                </div>
                <button onclick="buyItem('pokeball')" style="width:auto; background:#27ae60; border:none; padding:8px 12px; color:white; border-radius:4px; font-weight:bold; cursor:pointer;">COMPRAR</button>
            </div>
            <div style="background:#0b1220; padding:15px; border-radius:8px; margin-bottom:10px; display:flex; align-items:center; gap:10px;">
                <div style="font-size:30px;">üç¨</div>
                <div style="flex:1;">
                    <div style="font-weight:bold; color:#fff;">Rare Candy</div>
                    <div style="font-size:0.8rem; color:#aaa;">+1 N√≠vel.</div>
                    <div style="color:#f1c40f; margin-top:5px;">$2000</div>
                </div>
                <button onclick="buyItem('rareCandy')" style="width:auto; background:#27ae60; border:none; padding:8px 12px; color:white; border-radius:4px; font-weight:bold; cursor:pointer;">COMPRAR</button>
            </div>
        </div>
    </div>

    <!-- VARIAVEIS GLOBAIS -->
    <script>
        const socket = io();
        const myName = "<%= playerName %>";
        const mySkin = "<%= playerSkin %>";
        window.CURRENT_USER_ID = "<%= user._id %>"; 
        window.DEFEATED_NPCS = <%- JSON.stringify(user.defeatedNPCs || []) %>;
        
        let socketId = null;
        const viewport = document.getElementById('camera-viewport');
        const world = document.getElementById('game-world');
        
        // Dados iniciais
        const startX = <%= startX %>;
        const startY = <%= startY %>;
        
        // ESTADO GLOBAL DO JOGADOR
        window.isPlayerMoving = false;
        window.isInteracting = false;
    </script>

    <!-- CARREGA O COMMON.JS (Essencial para Toasts padronizados) -->
    <script src="/scripts/common.js"></script>

    <script>
        // --- 1. SISTEMA DE C√ÇMERA ---
        function updateCamera(playerXPercent, playerYPercent) {
            const vpW = viewport.clientWidth;
            const vpH = viewport.clientHeight;
            const worldW = world.clientWidth;
            const worldH = world.clientHeight;

            const px = (playerXPercent / 100) * worldW;
            const py = (playerYPercent / 100) * worldH;

            let camX = px - (vpW / 2);
            let camY = py - (vpH / 2);

            // Clamping (Impede sair do mapa)
            if (camX < 0) camX = 0;
            if (camY < 0) camY = 0;
            if (camX > worldW - vpW) camX = worldW - vpW;
            if (camY > worldH - vpH) camY = worldH - vpH;

            world.style.transform = `translate3d(-${camX}px, -${camY}px, 0)`;
        }

        // --- 2. SISTEMA DE COLIS√ÉO (Client-Side) ---
        function isBlocked(tx, ty) {
            const zones = document.querySelectorAll('.blocked');
            // Converte % para uma escala de 0 a 100 simples
            for (let zone of zones) {
                const zx = parseFloat(zone.style.left);
                const zy = parseFloat(zone.style.top);
                const zw = parseFloat(zone.style.width);
                const zh = parseFloat(zone.style.height);
                
                // Verifica se o ponto alvo est√° dentro do ret√¢ngulo
                if (tx >= zx && tx <= (zx + zw) && ty >= zy && ty <= (zy + zh)) {
                    return true;
                }
            }
            return false;
        }

        // --- 3. MOVIMENTO DO JOGADOR ---
        socket.on('player_moved', (data) => {
            let p = document.getElementById(`p-${data.id}`);
            
            // Criar se n√£o existir
            if (!p) {
                p = document.createElement('div');
                p.id = `p-${data.id}`;
                p.className = 'player';
                p.setAttribute('data-skin', data.skin || 'char1'); 
                
                const tag = document.createElement('div');
                tag.className = 'player-name';
                tag.innerText = data.name;
                p.appendChild(tag);
                
                world.appendChild(p);
            }

            const curX = parseFloat(p.style.left) || 0;
            const curY = parseFloat(p.style.top) || 0;
            const dist = Math.sqrt(Math.pow(data.x - curX, 2) + Math.pow(data.y - curY, 2));
            
            // Dura√ß√£o baseada na dist√¢ncia (para manter velocidade constante no mapa grande)
            // Ajustado para o mapa de 340vw
            const duration = dist > 0 ? (dist / 12) : 0; 

            p.style.transition = `left ${duration}s linear, top ${duration}s linear`;
            p.offsetHeight; // For√ßa reflow
            p.style.left = data.x + '%';
            p.style.top = data.y + '%';
            p.style.zIndex = Math.floor(data.y); // Z-Index para profundidade (atr√°s/frente de objetos)
            
            // Sprite Direction
            let posY = '0%';
            if(data.direction === 'up') posY = '100%';
            else if(data.direction === 'left') posY = '33.33%';
            else if(data.direction === 'right') posY = '66.66%';
            p.style.backgroundPositionY = posY;

            // Walking Animation
            if(duration > 0) {
                p.classList.add('walking');
                clearTimeout(p.walkTimer);
                p.walkTimer = setTimeout(() => {
                    p.classList.remove('walking');
                    
                    // L√ìGICA DE FIM DE MOVIMENTO (S√≥ libera o clique aqui)
                    if (data.id === socketId) {
                        window.isPlayerMoving = false;
                        
                        // Gatilho de sa√≠da autom√°tica no rodap√©
                        if (data.y > 98 && data.x > 35 && data.x < 65) {
                            goToForest();
                        }
                    }
                }, duration * 1000);
            } else if (data.id === socketId) {
                window.isPlayerMoving = false;
            }

            // Atualiza c√¢mera se for eu
            if (data.id === socketId) {
                updateCamera(data.x, data.y);
            }
        });

        // --- 4. CLICK E L√ìGICA DE INPUT (CORRIGIDA: BLOQUEIA SPAM) ---
        world.addEventListener('click', (e) => {
            // Ignora cliques em UI ou durante movimento
            if (e.target.closest('#ui-layer') || e.target.closest('.modal-content')) return;
            if (window.isPlayerMoving) return; // TRAVA O SPAM DE CLIQUES

            const rect = world.getBoundingClientRect();
            // Matem√°tica da c√¢mera relativa ao mundo
            const clickX = e.clientX - rect.left;
            const clickY = e.clientY - rect.top;

            const targetX = (clickX / rect.width) * 100;
            const targetY = (clickY / rect.height) * 100;

            // 1. Limites do mapa
            if (targetX < 1 || targetX > 99 || targetY < 1 || targetY > 99) return;

            // 2. Colis√£o com pr√©dios
            if (isBlocked(targetX, targetY)) {
                // Toca som de erro ou mostra toast
                // showToast("Caminho bloqueado!", { color: '#e74c3c' });
                return;
            }

            // 3. Tudo certo: Trava e Move
            window.isPlayerMoving = true;
            socket.emit('move_player', { x: targetX, y: targetY });

            // 4. Checa matinhos
            const elements = document.elementsFromPoint(e.clientX, e.clientY);
            const grassEl = elements.find(el => el.classList && el.classList.contains('grass-patch'));
            if (grassEl) {
                socket.emit('check_encounter', { grassId: grassEl.id, x: targetX, y: targetY });
            }
        });

        // --- 5. SOCKET INIT ---
        socket.on('connect', () => {
            socketId = socket.id;
            socket.emit('enter_map', {
                userId: '<%= user._id %>',
                name: myName,
                skin: mySkin,
                map: 'city',
                x: startX,
                y: startY,
                direction: 'down'
            });
            setTimeout(() => {
                updateCamera(startX, startY);
                if(document.getElementById('loader')) document.getElementById('loader').classList.remove('show');
            }, 100);
        });

        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if(el) el.remove(); });
        
        socket.on('map_state', (players) => {
            document.querySelectorAll('.player:not(.npc-entity)').forEach(e => e.remove());
            players.forEach(pl => {
                // Simula movimento instant√¢neo para criar o boneco inicial
                // Chamamos o handler do socket localmente para reaproveitar o c√≥digo de cria√ß√£o
                const dummyData = { id: pl.id, x: pl.x, y: pl.y, skin: pl.skin, name: pl.name, direction: pl.direction };
                // Pequeno hack: Emular o evento visual
                let p = document.createElement('div');
                p.id = `p-${pl.id}`; p.className = 'player'; p.setAttribute('data-skin', pl.skin || 'char1');
                p.style.left = pl.x + '%'; p.style.top = pl.y + '%';
                let tag = document.createElement('div'); tag.className = 'player-name'; tag.innerText = pl.name;
                p.appendChild(tag); world.appendChild(p);
            });
        });

        // Chat
        const chatInput = document.getElementById('chatInput');
        document.getElementById('chatSend').onclick = sendChat;
        function sendChat() { const msg = chatInput.value.trim(); if(msg) { socket.emit('send_chat', msg); chatInput.value = ''; } }
        socket.on('chat_message', (data) => {
            const p = document.getElementById(`p-${data.id}`);
            if(p) {
                const b = document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; 
                p.appendChild(b); setTimeout(()=>b.remove(), 4000);
            }
        });

        socket.on('encounter_found', () => {
            // Usa o Toast padr√£o do common.js
            showToast("üåø Pok√©mon selvagem apareceu!", { bg: 'rgba(46, 204, 113, 0.9)' });
            document.getElementById('loader').classList.add('show');
            setTimeout(() => { 
                const p = document.getElementById(`p-${socketId}`);
                const cx = p ? parseFloat(p.style.left) : 50;
                const cy = p ? parseFloat(p.style.top) : 50;
                
                fetch('/battle/wild', { 
                    method: 'POST', headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify({ userId: '<%= user._id %>', currentMap: 'city', currentX: cx, currentY: cy }) 
                }).then(r => r.json()).then(data => { 
                    if(data.battleId) window.location.href = '/battle/' + data.battleId; 
                    else { document.getElementById('loader').classList.remove('show'); showToast(data.error, { bg: '#e74c3c' }); window.isPlayerMoving = false; } 
                }); 
            }, 1000);
        });

        // --- 6. FUN√á√ïES DE INTERA√á√ÉO PADRONIZADAS ---
        function interact(type) {
            if (type === 'heal') healTeam();
            else if (type === 'shop') document.getElementById('modalShop').style.display = 'flex';
        }

        async function healTeam() {
            showToast('Curando equipe...', { bg: '#3498db' });
            await fetch('/api/heal', { 
                method: 'POST', headers: { 'Content-Type': 'application/json' }, 
                body: JSON.stringify({ userId: '<%= user._id %>' }) 
            });
            setTimeout(() => showToast('Equipe curada!', { bg: '#2ecc71' }), 500);
        }

        async function buyItem(item) {
            try {
                const res = await fetch('/api/buy-item', {
                    method: 'POST', headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ userId: '<%= user._id %>', itemId: item, qty: 1 })
                });
                const d = await res.json();
                if(d.success) showToast('Compra realizada!', { bg: '#2ecc71' });
                else showToast(d.error || 'Erro', { bg: '#e74c3c' });
            } catch(e) { showToast('Erro conex√£o', { bg: '#e74c3c' }); }
        }

        function goToForest() {
            document.getElementById('loader').classList.add('show');
            setTimeout(() => { window.location.href = '/forest?from=city&userId=<%= user._id %>'; }, 200);
        }

        // --- 7. NPCS ---
        socket.on('npcs_list', (npcs) => {
            document.querySelectorAll('.npc-entity').forEach(n => n.remove());
            npcs.forEach(npc => {
                const div = document.createElement('div');
                div.className = 'player npc-entity'; div.id = `npc-${npc._id}`;
                div.style.left = npc.x + '%'; div.style.top = npc.y + '%'; div.style.zIndex = Math.floor(npc.y);
                if (npc.isCustomSkin && npc.skin) div.style.backgroundImage = `url('${npc.skin}')`;
                else div.style.backgroundImage = `url('/uploads/${npc.skin || 'char1'}.png')`;
                
                const label = document.createElement('div');
                label.className = 'player-name'; label.innerText = npc.name;
                label.style.color = '#f1c40f'; label.style.borderColor = '#f39c12';
                div.appendChild(label);

                div.onclick = (e) => { e.stopPropagation(); interactWithNPC(npc); };
                document.getElementById('game-world').appendChild(div);
            });
        });
    </script>
</body>
