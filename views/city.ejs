<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Cidade Nova</title>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
        /* CSS GERAL PARA MOBILE E FULLSCREEN */
        * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; outline: none; }
        body { 
            margin: 0; padding: 0; background: #111; 
            overflow: hidden; /* IMPORTANTE: Esconde barras de rolagem nativas */
            width: 100vw; height: 100vh; 
            font-family: 'Roboto', sans-serif; user-select: none;
            touch-action: none; /* Previne zoom e scroll no mobile */
        }

        /* CONTAINER DA C√ÇMERA (Viewport) */
        #camera-viewport {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            background: #000;
        }

        /* O MUNDO DE JOGO (Mapa Gigante) */
        #game-world {
            position: absolute;
            /* TAMANHO DO MAPA: Ajuste aqui conforme sua imagem.
               Ex: 200vw = 2x a largura da tela. 200vh = 2x a altura. */
            width: 200vw; 
            height: 200vh; 
            
            /* Coloque sua imagem grande aqui: /public/uploads/city_map_large.png */
            background-image: url('/uploads/city_map_large.png'); 
            
            background-size: 100% 100%;
            image-rendering: pixelated;
            
            /* Transi√ß√£o suave da c√¢mera */
            transition: transform 0.1s linear;
            transform-origin: 0 0;
            box-shadow: inset 0 0 50px #000;
        }

        /* JOGADOR */
        .player {
            position: absolute;
            width: 48px; height: 48px;
            margin-left: -24px; margin-top: -40px;
            background-size: 400% auto;
            image-rendering: pixelated;
            z-index: 10;
            transition: top 0s linear, left 0s linear;
        }
        .player.walking { animation: walk 0.6s steps(4) infinite; }
        @keyframes walk { from { background-position-x: 0; } to { background-position-x: -400%; } }
        /* Skins */
        <% for(let i = 1; i <= skinCount; i++) { %> .player[data-skin="char<%= i %>"] { background-image: url('/uploads/char<%= i %>.png'); } <% } %>
        .player-name { position: absolute; top: -30px; left: 50%; transform: translateX(-50%); background: rgba(0,0,0,0.6); color: white; padding: 2px 6px; border-radius: 4px; font-size: 0.7rem; white-space: nowrap; pointer-events: none; }

        /* ZONAS DE INTERA√á√ÉO (Pr√©dios, Portas) */
        .interaction-zone {
            position: absolute;
            background: rgba(255, 255, 0, 0.0); /* Transparente em produ√ß√£o */
            cursor: pointer;
            z-index: 50;
        }
        
        /* Exemplo: Centro Pok√©mon no topo esquerdo do mapa */
        #interaction-heal { top: 15%; left: 20%; width: 10%; height: 8%; }
        /* Exemplo: Loja no topo direito */
        #interaction-shop { top: 15%; left: 70%; width: 10%; height: 8%; }
        
        /* UI FIXA (Chat, Menu) */
        #ui-layer { position: fixed; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none; z-index: 100; }
        
        /* Chat na parte inferior */
        #chatBar { position: fixed; bottom: max(20px, env(safe-area-inset-bottom) + 15px); left: 50%; transform: translateX(-50%); width: 90%; max-width: 450px; display: flex; align-items: center; gap: 8px; pointer-events: auto; background: #1a1a2e; border: 2px solid #3498db; padding: 8px; border-radius: 50px; }
        #chatInput { flex: 1; padding: 5px 10px; border: none; background: transparent; color: white; outline: none; font-family: 'Roboto', sans-serif; font-size: 1rem; }
        #chatSend { width: 40px; height: 40px; border-radius: 50%; border: none; background: linear-gradient(135deg, #f1c40f, #f39c12); color: #1a1a2e; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 1.2rem; margin: 0; }
        
        /* Bal√£o de Chat */
        .chat-bubble { position: absolute; bottom: 60px; left: 50%; transform: translateX(-50%); background: white; color: black; padding: 5px 10px; border-radius: 10px; border: 2px solid #333; font-size: 0.8rem; white-space: nowrap; z-index: 1000; animation: popIn 0.2s forwards; }
        @keyframes popIn { from { transform: translateX(-50%) scale(0); opacity: 0; } to { transform: translateX(-50%) scale(1); opacity: 1; } }

        /* Loader */
        .loader-overlay { position: fixed; inset: 0; display:flex; align-items:center; justify-content:center; background: rgba(0,0,0,0.9); z-index: 99999; opacity: 0; pointer-events: none; transition: opacity .35s ease; }
        .loader-overlay.show { opacity: 1; pointer-events: auto; }
        .loader-box { background: #0b1622; border: 1px solid #333; padding: 20px; border-radius: 12px; color: #fff; font-family:'Press Start 2P'; display:flex; gap:10px; align-items:center; }
        .spinner { width: 20px; height: 20px; border: 3px solid #333; border-top: 3px solid #f1c40f; border-radius: 50%; animation: spin 1s infinite linear; }
        @keyframes spin { to { transform: rotate(360deg); } }
        
        /* Modais */
        .modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.85); z-index: 3000; display: none; justify-content: center; align-items: center; backdrop-filter: blur(5px); pointer-events: auto; }
        .modal-content { background: #1a1a2e; width: 90%; max-width: 400px; padding: 20px; border-radius: 15px; border: 1px solid #3498db; color: white; position: relative; }
        .close-btn { position: absolute; top: 10px; right: 10px; background: #e74c3c; border: none; color: white; width: 30px; height: 30px; border-radius: 50%; cursor: pointer; }

        .npc-entity { cursor: pointer; }
    </style>
</head>
<body>

    <!-- CAMADA DO JOGO -->
    <div id="camera-viewport">
        <div id="game-world">
            
            <!-- √Åreas clic√°veis (Intera√ß√µes) -->
            <!-- Ajuste top/left/width/height conforme o desenho do seu mapa -->
            <div id="interaction-heal" class="interaction-zone" onclick="interact('heal')"></div>
            <div id="interaction-shop" class="interaction-zone" onclick="interact('shop')"></div>

            <!-- Sa√≠da de volta para a floresta (Embaixo) -->
            <div class="interaction-zone" style="top: 98%; left: 40%; width: 20%; height: 2%;" onclick="goToForest()"></div>

        </div>
    </div>

    <!-- CAMADA DE UI (Sobreposta ao canvas) -->
    <div id="ui-layer">
        <%- include('partials/menu') %> 
        
        <div id="chatBar">
            <input type="text" id="chatInput" placeholder="Mensagem..." autocomplete="off" maxlength="30">
            <button id="chatSend">üí¨</button>
        </div>
    </div>
    
    <!-- LOADER -->
    <div id="loader" class="loader-overlay show"><div class="loader-box"><div class="spinner"></div><div class="loader-text">Carregando mapa...</div></div></div>
    <div id="toastContainer" style="position:fixed; top:20px; width:100%; display:flex; justify-content:center; z-index:2000; pointer-events:none;"></div>

    <!-- MODAL LOJA -->
    <div class="modal-overlay" id="modalShop">
        <div class="modal-content">
            <button class="close-btn" onclick="document.getElementById('modalShop').style.display='none'">X</button>
            <h2 style="text-align:center; font-family:'Press Start 2P'; margin-bottom:20px; color:#f1c40f;">LOJA</h2>
            <div style="text-align:center;">
                <button onclick="buyItem('pokeball')" style="padding:10px; width:100%; margin-bottom:10px; background:#27ae60; color:white; border:none; border-radius:5px;">Comprar CatchCube ($50)</button>
                <button onclick="buyItem('rareCandy')" style="padding:10px; width:100%; background:#27ae60; color:white; border:none; border-radius:5px;">Comprar Rare Candy ($2000)</button>
            </div>
        </div>
    </div>

    <script>
        const socket = io();
        const myName = "<%= playerName %>";
        const mySkin = "<%= playerSkin %>";
        window.CURRENT_USER_ID = "<%= user._id %>"; 
        
        let socketId = null;
        const viewport = document.getElementById('camera-viewport');
        const world = document.getElementById('game-world');
        const MOVEMENT_SPEED = 60; // Pixels por segundo ajustado para o mapa grande

        // Dados iniciais passados pelo backend
        const startX = <%= startX %>;
        const startY = <%= startY %>;

        // --- SISTEMA DE C√ÇMERA ---
        function updateCamera(playerXPercent, playerYPercent) {
            const vpW = viewport.clientWidth;
            const vpH = viewport.clientHeight;
            const worldW = world.clientWidth;
            const worldH = world.clientHeight;

            // Converte % do jogador para pixels no mundo
            const px = (playerXPercent / 100) * worldW;
            const py = (playerYPercent / 100) * worldH;

            // Centraliza a c√¢mera no jogador
            let camX = px - (vpW / 2);
            let camY = py - (vpH / 2);

            // Impede que a c√¢mera saia do mapa (Clamping)
            if (camX < 0) camX = 0;
            if (camY < 0) camY = 0;
            if (camX > worldW - vpW) camX = worldW - vpW;
            if (camY > worldH - vpH) camY = worldH - vpH;

            // Move o mundo (Hardware Accelerated)
            world.style.transform = `translate3d(-${camX}px, -${camY}px, 0)`;
        }

        // --- CONEX√ÉO SOCKET ---
        socket.on('connect', () => {
            socketId = socket.id;
            socket.emit('enter_map', {
                userId: '<%= user._id %>',
                name: myName,
                skin: mySkin,
                map: 'city', // Importante: nome do mapa deve coincidir com o join no server
                x: startX,
                y: startY,
                direction: 'down'
            });
            // Posiciona c√¢mera inicial imediatamente
            setTimeout(() => {
                updateCamera(startX, startY);
                document.getElementById('loader').classList.remove('show');
            }, 100);
        });

        // --- MOVIMENTA√á√ÉO VISUAL ---
        socket.on('player_moved', (data) => {
            let p = document.getElementById(`p-${data.id}`);
            
            // Se o jogador n√£o existe, cria ele
            if (!p) {
                p = document.createElement('div');
                p.id = `p-${data.id}`;
                p.className = 'player';
                p.setAttribute('data-skin', data.skin || 'char1'); 
                
                const tag = document.createElement('div');
                tag.className = 'player-name';
                tag.innerText = data.name;
                p.appendChild(tag);
                
                world.appendChild(p);
            }

            // Anima√ß√£o CSS baseada na dist√¢ncia
            const curX = parseFloat(p.style.left) || 0;
            const curY = parseFloat(p.style.top) || 0;
            const dx = data.x - curX;
            const dy = data.y - curY;
            // Dist√¢ncia em % aproximada para dura√ß√£o
            const dist = Math.sqrt(dx*dx + dy*dy);
            
            // Fator de velocidade ajustado para o tamanho do mapa
            const duration = dist > 0 ? (dist / 15) : 0; 

            p.style.transition = `left ${duration}s linear, top ${duration}s linear`;
            p.offsetHeight; // For√ßa reflow
            p.style.left = data.x + '%';
            p.style.top = data.y + '%';
            p.style.zIndex = Math.floor(data.y); // Profundidade baseada no Y
            
            // Dire√ß√£o do sprite
            let posY = '0%';
            if(data.direction === 'up') posY = '100%';
            else if(data.direction === 'left') posY = '33.33%';
            else if(data.direction === 'right') posY = '66.66%';
            p.style.backgroundPositionY = posY;

            // Adiciona classe walking
            if(duration > 0) {
                p.classList.add('walking');
                clearTimeout(p.walkTimer);
                p.walkTimer = setTimeout(() => p.classList.remove('walking'), duration * 1000);
            }

            // SE SOU EU, ATUALIZO A C√ÇMERA
            if (data.id === socketId) {
                updateCamera(data.x, data.y);
                
                // Gatilho de sa√≠da (Voltar pra floresta) - Area no fundo do mapa
                if (data.y > 96 && data.x > 35 && data.x < 65) {
                    goToForest();
                }
            }
        });

        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if(el) el.remove(); });
        
        socket.on('map_state', (players) => {
            // Limpa jogadores antigos e recria (simples, mas funciona)
            document.querySelectorAll('.player').forEach(e => e.remove());
            players.forEach(pl => {
                let p = document.createElement('div');
                p.id = `p-${pl.id}`;
                p.className = 'player';
                p.setAttribute('data-skin', pl.skin || 'char1');
                p.style.left = pl.x + '%';
                p.style.top = pl.y + '%';
                let tag = document.createElement('div'); tag.className = 'player-name'; tag.innerText = pl.name;
                p.appendChild(tag);
                world.appendChild(p);
            });
        });

        // Chat
        const chatInput = document.getElementById('chatInput');
        document.getElementById('chatSend').onclick = sendChat;
        function sendChat() { 
            const msg = chatInput.value.trim(); 
            if(msg) { socket.emit('send_chat', msg); chatInput.value = ''; } 
        }
        socket.on('chat_message', (data) => {
            const p = document.getElementById(`p-${data.id}`);
            if(p) {
                const b = document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; 
                p.appendChild(b); setTimeout(()=>b.remove(), 4000);
            }
        });

        // --- SISTEMA DE CLIQUE E COLIS√ÉO (MOBILE FRIENDLY) ---
        world.addEventListener('click', (e) => {
            // Ignora se clicou em intera√ß√£o ou na UI
            if (e.target.classList.contains('interaction-zone') || e.target.closest('#ui-layer')) return;

            const rect = world.getBoundingClientRect();
            
            // C√ÅLCULO M√ÅGICO DO MAPA GRANDE:
            // e.clientX √© relativo √† tela. rect.left √© negativo (c√¢mera movida).
            // A subtra√ß√£o converte para coordenada relativa ao in√≠cio do mapa.
            const clickX = e.clientX - rect.left;
            const clickY = e.clientY - rect.top;

            // Converte para %
            const targetX = (clickX / rect.width) * 100;
            const targetY = (clickY / rect.height) * 100;

            // Limites b√°sicos (n√£o andar fora do mapa)
            if (targetX < 2 || targetX > 98 || targetY < 2 || targetY > 98) return;

            // Envia para o servidor
            socket.emit('move_player', { x: targetX, y: targetY });
        });

        // --- INTERA√á√ïES ---
        function interact(type) {
            // Verifica se o jogador est√° perto o suficiente (opcional, mas recomendado)
            const p = document.getElementById(`p-${socketId}`);

            if (type === 'heal') {
                healTeam();
            } else if (type === 'shop') {
                document.getElementById('modalShop').style.display = 'flex';
            }
        }

        async function healTeam() {
            const t = document.getElementById('toastContainer');
            t.innerHTML = '<div style="background:rgba(0,0,0,0.7);color:#2ecc71;padding:10px;border-radius:5px;">Curando...</div>';
            await fetch('/api/heal', { 
                method: 'POST', 
                headers: { 'Content-Type': 'application/json' }, 
                body: JSON.stringify({ userId: '<%= user._id %>' }) 
            });
            setTimeout(() => t.innerHTML = '', 2000);
        }

        async function buyItem(item) {
            try {
                const res = await fetch('/api/buy-item', {
                    method: 'POST', headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ userId: '<%= user._id %>', itemId: item, qty: 1 })
                });
                const d = await res.json();
                if(d.success) alert("Comprado!"); else alert("Erro: " + d.error);
            } catch(e) { alert("Erro conex√£o"); }
        }

        function goToForest() {
            document.getElementById('loader').classList.add('show');
            setTimeout(() => {
                window.location.href = '/forest?from=city&userId=<%= user._id %>';
            }, 200);
        }
    </script>
</body>
</html>