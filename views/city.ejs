    <script src="/scripts/common.js"></script>

    <script>
        const gameArea = document.getElementById('gameArea');
        let myId = null; 
        const MOVEMENT_SPEED = 55; 
        let isMoving = false;

        // --- INICIALIZA√á√ÉO ---
        // Se nasceu numa casa, configura o visual imediatamente
        if (currentMapId !== 'city') {
            const house = housesData.find(h => h.id === currentMapId);
            if (house) enterHouseVisuals(house);
            else currentMapId = 'city'; // Fallback
        }

        // --- SOCKET ---
        socket.on('connect', () => { 
            myId = socket.id; 
            // Entra no canal correto (city ou house_ID) para ver os NPCs certos
            socket.emit('enter_map', { userId: window.CURRENT_USER_ID, name: myName, skin: mySkin, map: currentMapId, x: startX, y: startY, direction: startDir }); 
        });

        socket.on('map_state', (players) => { 
            document.querySelectorAll('.player:not(.npc-entity)').forEach(el => el.remove()); 
            players.forEach(createPlayerElement); 
            if(typeof hideLoading === 'function') hideLoading(); 
            else document.getElementById('loader').classList.remove('show');
        });
        
        socket.on('player_joined', (p) => { if(p.id !== myId) createPlayerElement(p); });
        
        socket.on('player_moved', (data) => {
            const el = document.getElementById(`p-${data.id}`);
            if (el) {
                const currentLeft = parseFloat(el.style.left) || 50; const currentTop = parseFloat(el.style.top) || 50;
                const dx = data.x - currentLeft; const dy = data.y - currentTop;
                const distance = Math.sqrt(dx*dx + dy*dy); const duration = distance > 0 ? distance / MOVEMENT_SPEED : 0;
                
                el.style.transition = `top ${duration}s linear, left ${duration}s linear`; 
                void el.offsetWidth; 
                el.style.left = data.x + '%'; el.style.top = data.y + '%'; 
                el.style.zIndex = Math.floor(data.y); 
                el.setAttribute('data-dir', data.direction);
                
                if (duration > 0) { 
                    if (!el.classList.contains('walking')) el.classList.add('walking'); 
                    if (el.walkTimeout) clearTimeout(el.walkTimeout); 
                    el.walkTimeout = setTimeout(() => { 
                        el.classList.remove('walking'); 
                        if (data.id === myId) { 
                            isMoving = false; 
                            checkTriggers(data.x, data.y); 
                        }
                    }, duration * 1000); 
                } else if(data.id === myId) { isMoving = false; }
            }
        });
        
        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if (el) el.remove(); });
        socket.on('chat_message', (data) => { const p = document.getElementById(`p-${data.id}`); if(p) { const b = document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; p.appendChild(b); setTimeout(()=>b.remove(),4000); }});

        // --- SISTEMA DE NPCS ---
        socket.on('npcs_list', (npcs) => {
            document.querySelectorAll('.npc-entity').forEach(n => n.remove());
            npcs.forEach(npc => {
                const div = document.createElement('div');
                div.className = 'player npc-entity'; div.id = `npc-${npc._id}`;
                div.style.left = npc.x + '%'; div.style.top = npc.y + '%'; div.style.zIndex = Math.floor(npc.y);
                
                if (npc.skin && (npc.skin.startsWith('http') || npc.skin.startsWith('data:'))) {
                    div.style.backgroundImage = `url('${npc.skin}')`;
                } else {
                    div.style.backgroundImage = `url('/uploads/${npc.skin || 'char1'}.png')`;
                }
                
                const label = document.createElement('div');
                label.className = 'player-name'; label.innerText = npc.name;
                div.appendChild(label);

                div.onclick = (e) => { 
                    e.stopPropagation(); 
                    const myPlayer = document.getElementById(`p-${myId}`);
                    const currX = parseFloat(myPlayer.style.left);
                    const currY = parseFloat(myPlayer.style.top);
                    const dx = npc.x - currX; const dy = npc.y - currY;
                    const totalDist = Math.hypot(dx, dy);
                    const STOP_DISTANCE = 6; // Dist√¢ncia segura

                    if (totalDist <= STOP_DISTANCE) {
                        if(typeof interactWithNPC === 'function') interactWithNPC(npc);
                        return;
                    }

                    const ratio = (totalDist - STOP_DISTANCE) / totalDist;
                    const targetX = currX + (dx * ratio);
                    const targetY = currY + (dy * ratio);
                    const safeDest = getSafeTarget(currX, currY, targetX, targetY);

                    isMoving = true;
                    socket.emit('move_player', { x: safeDest.x, y: safeDest.y });
                    const distToWalk = Math.hypot(safeDest.x - currX, safeDest.y - currY);
                    const travelTime = (distToWalk / MOVEMENT_SPEED) * 1000;

                    setTimeout(() => { if(typeof interactWithNPC === 'function') interactWithNPC(npc); }, travelTime);
                };
                gameArea.appendChild(div);
            });
        });

        // --- BATALHA ---
        socket.on('encounter_found', () => {
             if(typeof showToast === 'function') showToast('üåø Um Monstro selvagem apareceu!');
             if(typeof showLoading === 'function') showLoading('Iniciando Batalha...', 'zoom');
             
             const p = document.getElementById(`p-${myId}`);
             const cx = p ? parseFloat(p.style.left) : 50;
             const cy = p ? parseFloat(p.style.top) : 50;

             setTimeout(() => {
                 fetch('/battle/wild', { 
                     method: 'POST', 
                     headers: {'Content-Type':'application/json'}, 
                     body: JSON.stringify({
                         userId: window.CURRENT_USER_ID, 
                         currentMap: currentMapId, // Envia 'city' ou 'house_ID'
                         currentX: cx,
                         currentY: cy
                     }) 
                 })
                 .then(r => r.json())
                 .then(d => { 
                     if(d.battleId) window.location.href = '/battle/' + d.battleId; 
                     else { 
                         if(typeof hideLoading === 'function') hideLoading();
                         if(typeof showToast === 'function') showToast(d.error || "Nenhum Pok√©mon apareceu.", {bg:'#f39c12'});
                     }
                 })
                 .catch(err => {
                     if(typeof hideLoading === 'function') hideLoading();
                     if(typeof showToast === 'function') showToast("Erro de conex√£o.", {bg:'#e74c3c'});
                 });
             }, 1000);
        });

        // --- RENDERIZA√á√ÉO E L√ìGICA DE MAPA ---
        renderMapObjects();

        function createPlayerElement(p) { 
            const div = document.createElement('div'); div.id = `p-${p.id}`; div.className = 'player'; 
            div.style.left = p.x + '%'; div.style.top = p.y + '%'; div.style.zIndex = Math.floor(p.y); div.setAttribute('data-dir', p.direction || 'down'); 
            if (p.sprite) { 
                const img = document.createElement('img'); img.src = p.sprite; img.style.width='28px'; img.style.height='28px'; img.style.objectFit='contain'; div.appendChild(img); div.style.backgroundImage='none'; 
            } else { 
                div.style.backgroundImage = `url('/uploads/${p.skin || 'char1'}.png')`; 
            }
            const label = document.createElement('div'); label.className = 'player-name'; label.innerText = p.name; div.appendChild(label); 
            gameArea.appendChild(div); if (p.id === myId) playerElement = div; 
        }

        function getSafeTarget(currX, currY, targetX, targetY) {
            const steps = 25;
            // Seleciona o mapa de colis√£o correto (Cidade ou Casa Atual)
            let activeCollisions = collisionMap;
            if (currentMapId !== 'city') {
                const house = housesData.find(h => h.id === currentMapId);
                if (house && house.collisions) activeCollisions = house.collisions;
                else activeCollisions = []; // Casa sem colis√£o definida
            }

            for (let i = 1; i <= steps; i++) {
                const t = i / steps;
                const px = currX + (targetX - currX) * t;
                const py = currY + (targetY - currY) * t;
                const hit = activeCollisions.some(rect => px >= rect.x && px <= (rect.x + rect.w) && py >= rect.y && py <= (rect.y + rect.h));
                if (hit) return { x: currX + (targetX - currX) * ((i - 1) / steps), y: currY + (targetY - currY) * ((i - 1) / steps) };
            }
            return { x: targetX, y: targetY };
        }

        function checkTriggers(x, y) {
            // 1. Sa√≠das da Cidade (S√≥ se estiver na cidade)
            if (currentMapId === 'city') {
                if (y > 95 && x > 30 && x < 70) {
                    if(typeof showLoading === 'function') showLoading('Entrando na Floresta...', 'down');
                    setTimeout(() => window.location.href = '/forest?from=city&userId=' + window.CURRENT_USER_ID, 200);
                    return;
                }
                else if (y < 5 && x > 30 && x < 70) {
                    if(typeof showLoading === 'function') showLoading('Voltando para a cidade...', 'up');
                    setTimeout(() => window.location.href = '/lobby?from=city&userId=' + window.CURRENT_USER_ID, 200);
                    return;
                }

                // 2. Entradas de Casas (Zonas Azuis)
                const houseHit = housesData.find(h => 
                    x >= h.trigger.x && x <= (h.trigger.x + h.trigger.w) &&
                    y >= h.trigger.y && y <= (h.trigger.y + h.trigger.h)
                );

                if (houseHit) {
                    enterHouse(houseHit);
                }
            } 
            // 3. Sa√≠da da Casa (Zona Amarela)
            else {
                const house = housesData.find(h => h.id === currentMapId);
                if (house && house.exit) {
                    if (x >= house.exit.x && x <= (house.exit.x + house.exit.w) &&
                        y >= house.exit.y && y <= (house.exit.y + house.exit.h)) {
                        exitHouse(house);
                    }
                }
            }
        }

        function enterHouse(house) {
            if(typeof showLoading === 'function') showLoading('Entrando...', 'zoom');
            setTimeout(() => {
                currentMapId = house.id;
                enterHouseVisuals(house);
                
                // Teleporta player para o centro da casa (ou spawn definido)
                const spawnX = 50; const spawnY = 80;
                socket.emit('enter_map', { userId: window.CURRENT_USER_ID, name: myName, skin: mySkin, map: currentMapId, x: spawnX, y: spawnY, direction: 'up' });
                
                if(typeof hideLoading === 'function') hideLoading();
            }, 500);
        }

        function enterHouseVisuals(house) {
            gameArea.style.backgroundImage = `url('${house.bg}')`;
            gameArea.classList.add('indoor-mode');
            renderMapObjects(); // Redesenha (agora vai desenhar vazio ou colis√µes da casa)
        }

        function exitHouse(house) {
            if(typeof showLoading === 'function') showLoading('Saindo...', 'down');
            setTimeout(() => {
                currentMapId = 'city';
                gameArea.style.backgroundImage = `url('/uploads/route_map.png')`;
                gameArea.classList.remove('indoor-mode');
                
                // Teleporta para a porta da casa (trigger)
                const exitX = house.trigger.x + (house.trigger.w / 2);
                const exitY = house.trigger.y + house.trigger.h + 5;
                socket.emit('enter_map', { userId: window.CURRENT_USER_ID, name: myName, skin: mySkin, map: 'city', x: exitX, y: exitY, direction: 'down' });
                
                renderMapObjects();
                if(typeof hideLoading === 'function') hideLoading();
            }, 500);
        }

        gameArea.addEventListener('click', (e) => {
            if (devMode && !editingHouseId && currentTool !== 'house') return; // Bloqueia andar se editando cidade
            if (devMode && editingHouseId && (currentTool === 'innerCollision' || currentTool === 'exit')) return; // Bloqueia andar se editando casa

            if (e.target.closest('#chatBar') || isMoving || e.target.classList.contains('npc-entity')) return;

            const rect = gameArea.getBoundingClientRect();
            const rawX = ((e.clientX - rect.left) / rect.width) * 100;
            const rawY = ((e.clientY - rect.top) / rect.height) * 100;

            const myPlayer = document.getElementById(`p-${myId}`);
            if (!myPlayer) return;

            const currX = parseFloat(myPlayer.style.left);
            const currY = parseFloat(myPlayer.style.top);
            const safeDest = getSafeTarget(currX, currY, rawX, rawY);

            isMoving = true;
            socket.emit('move_player', { x: safeDest.x, y: safeDest.y });
            
            const dist = Math.hypot(safeDest.x - currX, safeDest.y - currY);
            const travelTime = (dist / MOVEMENT_SPEED) * 1000;
            
            // Checa grama apenas se estiver na cidade
            if (currentMapId === 'city') {
                const testEl = document.elementFromPoint(
                    rect.left + (safeDest.x/100 * rect.width), 
                    rect.top + (safeDest.y/100 * rect.height)
                );
                if (testEl && testEl.classList.contains('grass-patch')) {
                    setTimeout(() => socket.emit('check_encounter', { grassId: testEl.id }), travelTime);
                }
            }
        });

        const chatIn = document.getElementById('chatInput');
        document.getElementById('chatSend').onclick = () => { if(chatIn.value.trim()) { socket.emit('send_chat', chatIn.value); chatIn.value=''; } };

        // ============================================================
        // --- L√ìGICA DE ADMIN (ATUALIZADA PARA CASAS) ---
        // ============================================================
        if(isAdmin) document.getElementById('adminToolbar').style.display = 'flex';
        
        function toggleDevMode() { 
            devMode = !devMode; 
            document.getElementById('devTools').style.display = devMode ? 'flex' : 'none'; 
            document.getElementById('btnDevMode').innerText = devMode ? "DESATIVAR EDI√á√ÉO" : "üõ†Ô∏è ATIVAR EDI√á√ÉO"; 
            
            // Reseta visualiza√ß√£o
            if(!devMode && editingHouseId) exitHouseEditor();
            renderMapObjects(); 
        }

        function selectTool(tool) { 
            currentTool = tool; 
            document.querySelectorAll('#devTools button').forEach(b => b.classList.remove('active'));
            const btnId = {
                'collision': 'btnToolCol', 'grass': 'btnToolGrass', 'house': 'btnToolHouse',
                'innerCollision': 'btnToolInnerCol', 'exit': 'btnToolExit'
            }[tool];
            if(btnId) document.getElementById(btnId).classList.add('active');
        }

        function undoLast() { 
            if (editingHouseId) {
                const house = housesData.find(h => h.id === editingHouseId);
                if (currentTool === 'innerCollision' && house.collisions.length > 0) house.collisions.pop();
                if (currentTool === 'exit') house.exit = null;
            } else {
                if(currentTool === 'collision' && collisionMap.length > 0) collisionMap.pop(); 
                else if(currentTool === 'grass' && grassMap.length > 0) grassMap.pop();
                else if(currentTool === 'house' && housesData.length > 0) housesData.pop();
            }
            renderMapObjects(); 
        }

        function exportData() { 
            const output = document.getElementById('adminOutput'); 
            output.style.display = 'block'; 
            output.value = `let collisionMap = ${JSON.stringify(collisionMap)};\nlet grassMap = ${JSON.stringify(grassMap)};\nlet housesData = ${JSON.stringify(housesData)};`; 
            output.select(); document.execCommand('copy'); 
            if(typeof showToast === 'function') showToast("C√≥digo copiado!"); 
        }

        function renderMapObjects() {
            const colContainer = document.getElementById('collision-container'); 
            const grassContainer = document.getElementById('grass-container');
            const houseContainer = document.getElementById('house-container');
            
            colContainer.innerHTML = ''; grassContainer.innerHTML = ''; houseContainer.innerHTML = '';

            if (editingHouseId) {
                // Renderiza coisas da casa
                const house = housesData.find(h => h.id === editingHouseId);
                if (house) {
                    if (house.collisions) house.collisions.forEach(r => {
                        const d = document.createElement('div'); d.className = 'collision-box dev-collision';
                        d.style.left = r.x+'%'; d.style.top = r.y+'%'; d.style.width = r.w+'%'; d.style.height = r.h+'%';
                        colContainer.appendChild(d);
                    });
                    if (house.exit) {
                        const d = document.createElement('div'); d.className = 'house-exit dev-exit';
                        d.style.left = house.exit.x+'%'; d.style.top = house.exit.y+'%'; d.style.width = house.exit.w+'%'; d.style.height = house.exit.h+'%';
                        houseContainer.appendChild(d);
                    }
                }
            } else {
                // Renderiza coisas da cidade
                collisionMap.forEach(r => { 
                    const d = document.createElement('div'); d.className = 'collision-box'; 
                    if(isAdmin && devMode) d.classList.add('dev-collision'); 
                    d.style.left = r.x+'%'; d.style.top = r.y+'%'; d.style.width = r.w+'%'; d.style.height = r.h+'%'; 
                    colContainer.appendChild(d); 
                });
                grassMap.forEach((r, i) => { 
                    const d = document.createElement('div'); d.className = 'grass-patch'; d.id = 'city_grass_' + i; 
                    if(isAdmin && devMode) d.classList.add('dev-grass'); 
                    d.style.left = r.x+'%'; d.style.top = r.y+'%'; d.style.width = r.w+'%'; d.style.height = r.h+'%'; 
                    grassContainer.appendChild(d); 
                });
                housesData.forEach(h => {
                    const d = document.createElement('div'); d.className = 'house-trigger';
                    if(isAdmin && devMode) {
                        d.classList.add('dev-house');
                        d.onclick = (e) => { e.stopPropagation(); if(confirm('Editar interior desta casa?')) enterHouseEditor(h.id); };
                    }
                    d.style.left = h.trigger.x+'%'; d.style.top = h.trigger.y+'%'; d.style.width = h.trigger.w+'%'; d.style.height = h.trigger.h+'%';
                    houseContainer.appendChild(d);
                });
            }
        }

        function enterHouseEditor(hId) {
            editingHouseId = hId;
            const house = housesData.find(h => h.id === hId);
            gameArea.style.backgroundImage = `url('${house.bg}')`;
            gameArea.classList.add('indoor-mode');
            document.getElementById('cityTools').style.display = 'none';
            document.getElementById('houseTools').style.display = 'block';
            renderMapObjects();
        }

        function exitHouseEditor() {
            editingHouseId = null;
            gameArea.style.backgroundImage = `url('/uploads/route_map.png')`;
            gameArea.classList.remove('indoor-mode');
            document.getElementById('cityTools').style.display = 'block';
            document.getElementById('houseTools').style.display = 'none';
            renderMapObjects();
        }

        gameArea.addEventListener('mousedown', (e) => { 
            if(!devMode || !currentTool) return; 
            e.stopPropagation(); isDrawing = true; 
            const rect = gameArea.getBoundingClientRect(); 
            startPoint = {x: ((e.clientX - rect.left)/rect.width)*100, y: ((e.clientY - rect.top)/rect.height)*100}; 
            tempBox = document.createElement('div'); tempBox.className = 'drawing-box'; 
            
            if(currentTool === 'collision' || currentTool === 'innerCollision') tempBox.classList.add('dev-collision'); 
            else if(currentTool === 'grass') tempBox.classList.add('dev-grass'); 
            else if(currentTool === 'house') tempBox.classList.add('dev-house');
            else if(currentTool === 'exit') tempBox.classList.add('dev-exit');

            tempBox.style.left = startPoint.x+'%'; tempBox.style.top = startPoint.y+'%'; 
            document.getElementById('dev-layer').appendChild(tempBox); 
        });

        gameArea.addEventListener('mousemove', (e) => { 
            if(!isDrawing || !tempBox) return; 
            const rect = gameArea.getBoundingClientRect(); 
            const curX = ((e.clientX - rect.left)/rect.width)*100; 
            const curY = ((e.clientY - rect.top)/rect.height)*100; 
            const w = Math.abs(curX - startPoint.x); const h = Math.abs(curY - startPoint.y); 
            tempBox.style.width = w+'%'; tempBox.style.height = h+'%'; 
            tempBox.style.left = Math.min(curX, startPoint.x)+'%'; tempBox.style.top = Math.min(curY, startPoint.y)+'%'; 
        });

        gameArea.addEventListener('mouseup', (e) => { 
            if(!isDrawing) return; isDrawing = false; 
            if(tempBox) { 
                const newRect = { x: parseFloat(parseFloat(tempBox.style.left).toFixed(1)), y: parseFloat(parseFloat(tempBox.style.top).toFixed(1)), w: parseFloat(parseFloat(tempBox.style.width).toFixed(1)), h: parseFloat(parseFloat(tempBox.style.height).toFixed(1)) }; 
                
                if(newRect.w > 1 && newRect.h > 1) { 
                    if (editingHouseId) {
                        const house = housesData.find(h => h.id === editingHouseId);
                        if(currentTool === 'innerCollision') { if(!house.collisions) house.collisions = []; house.collisions.push(newRect); }
                        if(currentTool === 'exit') house.exit = newRect;
                    } else {
                        if(currentTool === 'collision') collisionMap.push(newRect); 
                        else if(currentTool === 'grass') grassMap.push(newRect);
                        else if(currentTool === 'house') {
                            const hId = prompt("ID da Casa (ex: house1):");
                            const bg = prompt("URL/Base64 do Fundo:");
                            if(hId && bg) {
                                housesData.push({ id: hId, bg: bg, trigger: newRect, collisions: [], exit: null });
                            }
                        }
                    }
                } 
                tempBox.remove(); tempBox = null; renderMapObjects(); 
            } 
        });
    </script>
