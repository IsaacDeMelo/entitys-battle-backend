                if(newRect.w > 1 && newRect.h > 1) { 
                    if (editingHouseId) {
                        const house = housesData.find(h => h.id === editingHouseId);
                        if(currentTool === 'innerCollision') { if(!house.collisions) house.collisions = []; house.collisions.push(newRect); }
                        if(currentTool === 'exit') house.exit = newRect;
                        if(currentTool === 'innerInteract') {
                            const type = prompt("Tipo (msg, item, both)?", "msg");
                            const msgs = prompt("Mensagens (separadas por |):", "Ol√°!");
                            const img = prompt("URL da Imagem (opcional):");
                            let item = null, qty = 0;
                            if(type === 'item' || type === 'both') {
                                item = prompt("ID do Item (ex: pokeball, rareCandy):");
                                qty = parseInt(prompt("Quantidade:", "1"));
                            }
                            if(!house.interacts) house.interacts = [];
                            house.interacts.push({ ...newRect, type, messages: msgs.split('|'), image: img, itemId: item, qty });
                        }
                    } else {
                        if(currentTool === 'collision') collisionMap.push(newRect); 
                        else if(currentTool === 'grass') grassMap.push(newRect);
                        else if(currentTool === 'house') {
                            const hId = prompt("ID da Casa (ex: house1):");
                            const bg = prompt("URL/Base64 do Fundo:");
                            if(hId && bg) housesData.push({ id: hId, bg: bg, trigger: newRect, collisions: [], exit: null, spawn: null, returnSpot: null });
                        }
                        else if(currentTool === 'interact') {
                            const type = prompt("Tipo (msg, item, both)?", "msg");
                            const msgs = prompt("Mensagens (separadas por |):", "Ol√°!");
                            const img = prompt("URL da Imagem (opcional):");
                            let item = null, qty = 0;
                            if(type === 'item' || type === 'both') {
                                item = prompt("ID do Item (ex: pokeball, rareCandy):");
                                qty = parseInt(prompt("Quantidade:", "1"));
                            }
                            interactsMap.push({ ...newRect, type, messages: msgs.split('|'), image: img, itemId: item, qty });
                        }
                    }
                } 
                tempBox.remove(); tempBox = null; renderMapObjects(); 
            } 
        });
