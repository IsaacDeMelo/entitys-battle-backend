<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>Cidade Nova</title>
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
        /* --- CSS GERAL --- */
        * { box-sizing: border-box; -webkit-tap-highlight-color: transparent; outline: none; }
        body { 
            margin: 0; padding: 0; background: #111; 
            overflow: hidden; 
            width: 100vw; height: 100vh; 
            font-family: 'Roboto', sans-serif; user-select: none;
            touch-action: none;
        }

        /* --- C√ÇMERA E MUNDO --- */
        #camera-viewport {
            position: relative;
            width: 100vw;
            height: 100vh;
            overflow: hidden;
            background: #2ecc71;
        }

        #game-world {
            position: absolute;
            width: 200vw; 
            height: 480vh; 
            
            background-image: url('/uploads/city_map_large.png'); 
            background-size: 100% 100%;
            image-rendering: pixelated;
            
            transition: transform 0.1s linear;
            transform-origin: 0 0;
            box-shadow: inset 0 0 50px rgba(0,0,0,0.5);
        }

        /* --- JOGADOR --- */
        .player {
            position: absolute;
            width: 48px; height: 48px;
            margin-left: -24px; margin-top: -40px;
            background-size: 400% auto;
            image-rendering: pixelated;
            z-index: 10;
            transition: top 0s linear, left 0s linear;
            filter: drop-shadow(0 4px 2px rgba(0,0,0,0.4));
        }
        .player.walking { animation: walk 0.6s steps(4) infinite; }
        @keyframes walk { from { background-position-x: 0; } to { background-position-x: -400%; } }
        
        <% for(let i = 1; i <= skinCount; i++) { %> 
            .player[data-skin="char<%= i %>"] { background-image: url('/uploads/char<%= i %>.png'); } 
        <% } %>
        
        .player-name { 
            position: absolute; top: -25px; left: 50%; transform: translateX(-50%); 
            background: rgba(0,0,0,0.6); color: white; padding: 2px 6px; 
            border-radius: 4px; font-size: 0.6rem; white-space: nowrap; pointer-events: none; 
            font-family: 'Press Start 2P', cursive;
        }

        /* --- ZONAS DE INTERA√á√ÉO & GRAMA --- */
        .interaction-zone {
            position: absolute;
            background: rgba(255, 255, 0, 0.0); /* Mude para 0.3 para debug */
            cursor: pointer;
            z-index: 50;
        }
        
        /* Matinhos (Transparente pois j√° est√£o na imagem, mas precisamos da div para clicar) */
        .grass-patch {
            position: absolute;
            z-index: 5;
            cursor: pointer;
            background: transparent;
        }

        /* Grama Grande (Topo Esquerdo) */
        #city_grass1 { top: 2%; left: 25%; width: 15%; height: 5%; }
        
        /* Grama Grande (Fundo Esquerdo) */
        #city_grass2 { top: 90%; left: 5%; width: 15%; height: 5%; }

        /* Pr√©dio Azul (Loja) */
        #interaction-shop { top: 35%; left: 24%; width: 15%; height: 5%; }
        
        /* Pr√©dio Vermelho (Centro/Cura) */
        #interaction-heal { top: 6%; left: 60%; width: 15%; height: 5%; }

        /* Sa√≠da para Floresta */
        #interaction-exit { top: 97%; left: 45%; width: 25%; height: 3%; }

        /* --- UI LAYER --- */
        #ui-layer { 
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            pointer-events: none; z-index: 100; 
        }

        .menu-wrapper {
            pointer-events: auto; 
            position: absolute; top: 0; left: 0; width: 100%;
        }

        #chatBar { 
            position: fixed; bottom: max(20px, env(safe-area-inset-bottom) + 15px); 
            left: 50%; transform: translateX(-50%); width: 90%; max-width: 450px; 
            display: flex; align-items: center; gap: 8px; 
            pointer-events: auto;
            background: #1a1a2e; border: 2px solid #3498db; padding: 8px; border-radius: 50px; 
            box-shadow: 0 4px 10px rgba(0,0,0,0.5);
        }
        #chatInput { flex: 1; padding: 5px 10px; border: none; background: transparent; color: white; outline: none; font-family: 'Roboto', sans-serif; font-size: 1rem; }
        #chatSend { width: 40px; height: 40px; border-radius: 50%; border: none; background: linear-gradient(135deg, #f1c40f, #f39c12); color: #1a1a2e; cursor: pointer; display: flex; align-items: center; justify-content: center; font-size: 1.2rem; margin: 0; }
        
        .chat-bubble { 
            position: absolute; bottom: 60px; left: 50%; transform: translateX(-50%); 
            background: white; color: black; padding: 5px 10px; border-radius: 10px; 
            border: 2px solid #333; font-size: 0.8rem; white-space: nowrap; z-index: 1000; 
            animation: popIn 0.2s forwards; box-shadow: 0 2px 5px rgba(0,0,0,0.3);
        }
        @keyframes popIn { from { transform: translateX(-50%) scale(0); opacity: 0; } to { transform: translateX(-50%) scale(1); opacity: 1; } }

        /* --- MODAIS --- */
        .modal-overlay { 
            position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
            background: rgba(0,0,0,0.85); z-index: 3000; display: none; 
            justify-content: center; align-items: center; backdrop-filter: blur(5px); 
            pointer-events: auto; 
        }
        .modal-content { 
            background: #1a1a2e; width: 90%; max-width: 400px; padding: 20px; 
            border-radius: 15px; border: 1px solid #3498db; color: white; position: relative; 
            box-shadow: 0 0 20px rgba(52, 152, 219, 0.3);
        }
        .close-btn { 
            position: absolute; top: 10px; right: 10px; background: #e74c3c; 
            border: none; color: white; width: 30px; height: 30px; border-radius: 50%; 
            cursor: pointer; font-weight: bold; display: flex; align-items: center; justify-content: center;
        }

        /* --- LOADER --- */
        .loader-overlay { position: fixed; inset: 0; display:flex; align-items:center; justify-content:center; background: rgba(0,0,0,0.9); z-index: 99999; opacity: 0; pointer-events: none; transition: opacity .35s ease; }
        .loader-overlay.show { opacity: 1; pointer-events: auto; }
        .loader-box { background: linear-gradient(135deg,#0b1622,#071018); border: 1px solid rgba(255,255,255,0.05); padding: 20px 26px; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.6); transform: translateY(8px); opacity: 0; transition: transform .35s ease, opacity .35s ease; display:flex; align-items:center; gap:12px; color:#fff; font-family:'Press Start 2P'; }
        .loader-overlay.show .loader-box { transform: translateY(0); opacity: 1; }
        .spinner { width: 28px; height: 28px; border-radius: 50%; border: 4px solid rgba(255,255,255,0.08); border-top-color: #f1c40f; animation: spin 1s linear infinite; }
        @keyframes spin { to { transform: rotate(360deg); } }
        .loader-text { font-size: 0.8rem; color:#f1c40f; }

        .npc-entity { cursor: pointer; }
    </style>
</head>
<body>

    <!-- CAMADA DO JOGO -->
    <div id="camera-viewport">
        <div id="game-world">
            
            <!-- √Åreas de Intera√ß√£o -->
            <div id="interaction-heal" class="interaction-zone" onclick="interact('heal')"></div>
            <div id="interaction-shop" class="interaction-zone" onclick="interact('shop')"></div>
            <div id="interaction-exit" class="interaction-zone" onclick="goToForest()"></div>

            <!-- Matinhos da Cidade -->
            <div id="city_grass1" class="grass-patch"></div>
            <div id="city_grass2" class="grass-patch"></div>

        </div>
    </div>

    <!-- CAMADA DE UI -->
    <div id="ui-layer">
        <div class="menu-wrapper">
            <%- include('partials/menu') %> 
        </div>
        
        <div id="chatBar">
            <input type="text" id="chatInput" placeholder="Mensagem..." autocomplete="off" maxlength="30">
            <button id="chatSend">üí¨</button>
        </div>
    </div>
    
    <!-- LOADER E TOAST -->
    <div id="loader" class="loader-overlay show"><div class="loader-box"><div class="spinner"></div><div class="loader-text">Carregando mapa...</div></div></div>
    <div id="toastContainer" style="position:fixed; top:20px; width:100%; display:flex; justify-content:center; z-index:2000; pointer-events:none;"></div>

    <!-- MODAL LOJA -->
    <div class="modal-overlay" id="modalShop">
        <div class="modal-content">
            <button class="close-btn" onclick="document.getElementById('modalShop').style.display='none'">X</button>
            <h2 style="text-align:center; color:#f1c40f; font-family:'Press Start 2P'; margin-bottom:20px;">LOJA</h2>
            
            <div style="background:#0b1220; padding:15px; border-radius:8px; margin-bottom:10px; display:flex; align-items:center; gap:10px;">
                <img src="/uploads/catchcube.gif" style="width:40px; height:40px; object-fit:contain;">
                <div style="flex:1;">
                    <div style="font-weight:bold; color:#fff;">CatchCube</div>
                    <div style="font-size:0.8rem; color:#aaa;">Captura monstros selvagens.</div>
                    <div style="color:#f1c40f; margin-top:5px;">$50 moedas</div>
                </div>
                <button onclick="buyItem('pokeball')" style="width:auto; background:#27ae60; border:none; padding:8px 12px; color:white; border-radius:4px; font-weight:bold; cursor:pointer;">COMPRAR</button>
            </div>

            <div style="background:#0b1220; padding:15px; border-radius:8px; margin-bottom:10px; display:flex; align-items:center; gap:10px;">
                <div style="font-size:30px;">üç¨</div>
                <div style="flex:1;">
                    <div style="font-weight:bold; color:#fff;">Rare Candy</div>
                    <div style="font-size:0.8rem; color:#aaa;">Sobe 1 n√≠vel.</div>
                    <div style="color:#f1c40f; margin-top:5px;">$2000 moedas</div>
                </div>
                <button onclick="buyItem('rareCandy')" style="width:auto; background:#27ae60; border:none; padding:8px 12px; color:white; border-radius:4px; font-weight:bold; cursor:pointer;">COMPRAR</button>
            </div>
        </div>
    </div>

    <script>
        const socket = io();
        const myName = "<%= playerName %>";
        const mySkin = "<%= playerSkin %>";
        window.CURRENT_USER_ID = "<%= user._id %>"; 
        
        let socketId = null;
        const viewport = document.getElementById('camera-viewport');
        const world = document.getElementById('game-world');
        const MOVEMENT_SPEED = 60; 

        // Dados iniciais
        const startX = <%= startX %>;
        const startY = <%= startY %>;

        // --- C√ÇMERA ---
        function updateCamera(playerXPercent, playerYPercent) {
            const vpW = viewport.clientWidth;
            const vpH = viewport.clientHeight;
            const worldW = world.clientWidth;
            const worldH = world.clientHeight;

            const px = (playerXPercent / 100) * worldW;
            const py = (playerYPercent / 100) * worldH;

            let camX = px - (vpW / 2);
            let camY = py - (vpH / 2);

            if (camX < 0) camX = 0;
            if (camY < 0) camY = 0;
            if (camX > worldW - vpW) camX = worldW - vpW;
            if (camY > worldH - vpH) camY = worldH - vpH;

            world.style.transform = `translate3d(-${camX}px, -${camY}px, 0)`;
        }

        // --- CONEX√ÉO ---
        socket.on('connect', () => {
            socketId = socket.id;
            socket.emit('enter_map', {
                userId: '<%= user._id %>',
                name: myName,
                skin: mySkin,
                map: 'city',
                x: startX,
                y: startY,
                direction: 'down'
            });
            setTimeout(() => {
                updateCamera(startX, startY);
                document.getElementById('loader').classList.remove('show');
            }, 100);
        });

        // --- MOVIMENTO ---
        socket.on('player_moved', (data) => {
            let p = document.getElementById(`p-${data.id}`);
            
            if (!p) {
                p = document.createElement('div');
                p.id = `p-${data.id}`;
                p.className = 'player';
                p.setAttribute('data-skin', data.skin || 'char1'); 
                
                const tag = document.createElement('div');
                tag.className = 'player-name';
                tag.innerText = data.name;
                p.appendChild(tag);
                
                world.appendChild(p);
            }

            const curX = parseFloat(p.style.left) || 0;
            const curY = parseFloat(p.style.top) || 0;
            const dx = data.x - curX;
            const dy = data.y - curY;
            const dist = Math.sqrt(dx*dx + dy*dy);
            
            const duration = dist > 0 ? (dist / 15) : 0; 

            p.style.transition = `left ${duration}s linear, top ${duration}s linear`;
            p.offsetHeight; 
            p.style.left = data.x + '%';
            p.style.top = data.y + '%';
            p.style.zIndex = Math.floor(data.y); 
            
            let posY = '0%';
            if(data.direction === 'up') posY = '100%';
            else if(data.direction === 'left') posY = '33.33%';
            else if(data.direction === 'right') posY = '66.66%';
            p.style.backgroundPositionY = posY;

            if(duration > 0) {
                p.classList.add('walking');
                clearTimeout(p.walkTimer);
                p.walkTimer = setTimeout(() => p.classList.remove('walking'), duration * 1000);
            }

            if (data.id === socketId) {
                updateCamera(data.x, data.y);
                
                if (data.y > 98 && data.x > 35 && data.x < 65) {
                    goToForest();
                }
            }
        });

        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if(el) el.remove(); });
        
        socket.on('map_state', (players) => {
            document.querySelectorAll('.player').forEach(e => e.remove());
            players.forEach(pl => {
                let p = document.createElement('div');
                p.id = `p-${pl.id}`;
                p.className = 'player';
                p.setAttribute('data-skin', pl.skin || 'char1');
                p.style.left = pl.x + '%';
                p.style.top = pl.y + '%';
                let tag = document.createElement('div'); tag.className = 'player-name'; tag.innerText = pl.name;
                p.appendChild(tag);
                world.appendChild(p);
            });
        });

        // Chat
        const chatInput = document.getElementById('chatInput');
        document.getElementById('chatSend').onclick = sendChat;
        function sendChat() { 
            const msg = chatInput.value.trim(); 
            if(msg) { socket.emit('send_chat', msg); chatInput.value = ''; } 
        }
        socket.on('chat_message', (data) => {
            const p = document.getElementById(`p-${data.id}`);
            if(p) {
                const b = document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; 
                p.appendChild(b); setTimeout(()=>b.remove(), 4000);
            }
        });

        // --- ENCONTRO DE MATINHOS ---
        socket.on('encounter_found', () => {
            showToast("üåø Pok√©mon selvagem apareceu!", "#27ae60");
            document.getElementById('loader').classList.add('show');
            
            const p = document.getElementById(`p-${socketId}`);
            const cx = p ? parseFloat(p.style.left) : 50;
            const cy = p ? parseFloat(p.style.top) : 50;

            // Inicia batalha enviando 'city' como mapa atual
            setTimeout(() => { 
                fetch('/battle/wild', { 
                    method: 'POST', 
                    headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify({ 
                        userId: '<%= user._id %>',
                        currentMap: 'city', // IMPORTANTE: Define que estamos na cidade
                        currentX: cx,
                        currentY: cy
                    }) 
                })
                .then(r => r.json())
                .then(data => { 
                    if(data.battleId) window.location.href = '/battle/' + data.battleId; 
                    else { 
                        document.getElementById('loader').classList.remove('show');
                        showToast(data.error || "Nada encontrado.", "#e74c3c"); 
                    } 
                }); 
            }, 1000);
        });

        // --- SISTEMA DE CLIQUE ---
        world.addEventListener('click', (e) => {
            if (e.target.classList.contains('interaction-zone') || e.target.closest('#ui-layer')) return;
            if (e.target.closest('.modal-content')) return; 

            const rect = world.getBoundingClientRect();
            const clickX = e.clientX - rect.left;
            const clickY = e.clientY - rect.top;
            const targetX = (clickX / rect.width) * 100;
            const targetY = (clickY / rect.height) * 100;

            if (targetX < 1 || targetX > 99 || targetY < 1 || targetY > 99) return;

            socket.emit('move_player', { x: targetX, y: targetY });

            // Detecta se clicou/andou no mato da cidade
            const elements = document.elementsFromPoint(e.clientX, e.clientY);
            const grassEl = elements.find(el => el.classList && el.classList.contains('grass-patch'));
            if (grassEl) {
                socket.emit('check_encounter', { grassId: grassEl.id, x: targetX, y: targetY });
            }
        });

        // --- INTERA√á√ïES ---
        function interact(type) {
            if (type === 'heal') {
                healTeam();
            } else if (type === 'shop') {
                document.getElementById('modalShop').style.display = 'flex';
            }
        }

        async function healTeam() {
            showToast('Curando equipe...', '#3498db');
            await fetch('/api/heal', { 
                method: 'POST', 
                headers: { 'Content-Type': 'application/json' }, 
                body: JSON.stringify({ userId: '<%= user._id %>' }) 
            });
            showToast('Equipe curada!', '#2ecc71');
        }

        async function buyItem(item) {
            try {
                const res = await fetch('/api/buy-item', {
                    method: 'POST', headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ userId: '<%= user._id %>', itemId: item, qty: 1 })
                });
                const d = await res.json();
                if(d.success) showToast('Compra realizada!', '#2ecc71');
                else showToast(d.error || 'Erro', '#e74c3c');
            } catch(e) { showToast('Erro conex√£o', '#e74c3c'); }
        }

        function goToForest() {
            document.getElementById('loader').classList.add('show');
            setTimeout(() => {
                window.location.href = '/forest?from=city&userId=<%= user._id %>';
            }, 200);
        }

        function showToast(msg, color='#333') {
            const t = document.getElementById('toastContainer');
            const d = document.createElement('div');
            d.style.background = color;
            d.style.color = '#fff';
            d.style.padding = '10px 15px';
            d.style.borderRadius = '8px';
            d.style.fontFamily = 'Press Start 2P';
            d.style.fontSize = '0.7rem';
            d.style.boxShadow = '0 4px 10px rgba(0,0,0,0.5)';
            d.style.animation = 'popIn 0.3s forwards';
            d.innerText = msg;
            t.innerHTML = '';
            t.appendChild(d);
            setTimeout(() => d.remove(), 2500);
        }
    </script>
</body>
</html>
