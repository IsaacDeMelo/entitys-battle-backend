                }
            } catch (_) {
                npcShopRowsState = [];
            }
            npcShopRender();
            npcShopSyncJson();
        }

        function npcShopAddRow() {
            npcShopRowsState.push({ itemId: '', price: 50 });
            npcShopRender();
            npcShopSyncJson();
        }

        function npcShopAddPreset(itemId, price) {
            npcShopRowsState.push({ itemId: String(itemId || '').trim(), price: Math.max(0, parseInt(price, 10) || 0) });
            npcShopRender();
            npcShopSyncJson();
        }

        function npcShopClear() {
            npcShopRowsState = [];
            npcShopRender();
            npcShopSyncJson();
        }

        document.addEventListener('input', (e) => {
            if (e && e.target && e.target.id === 'npcInteractShopItemsJson') {
                npcShopLoadFromJson(e.target.value);
            }
        });

        // Inicializa editores (novo NPC)
        setTimeout(() => {
            npcTeamLoadFromJson(document.getElementById('npcTeam')?.value || '[]');
            npcShopLoadFromJson(document.getElementById('npcInteractShopItemsJson')?.value || '[]');
        }, 0);
    </script>
</body>
