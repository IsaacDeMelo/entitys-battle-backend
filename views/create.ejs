            try {
                const arr = JSON.parse(json || '[]');
                if (Array.isArray(arr)) {
                    npcTeamRowsState = arr
                        .filter(x => x && x.baseId)
                        .map(x => ({ baseId: String(x.baseId), level: Math.max(1, parseInt(x.level, 10) || 1) }));
                } else {
                    npcTeamRowsState = [];
                }
