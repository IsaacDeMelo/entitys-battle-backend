<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laboratório - Goofymon Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@500;700&display=swap" rel="stylesheet">
    <style>
        :root { --bg: #0f172a; --panel: #1e293b; --accent: #3498db; --text: #e2e8f0; --danger: #e74c3c; --success: #2ecc71; }
        * { box-sizing: border-box; }
        body { background: var(--bg); color: var(--text); font-family: 'Rajdhani', sans-serif; margin: 0; padding: 20px; height: 100vh; overflow: hidden; display: flex; flex-direction: column; }
        header { display: flex; justify-content: space-between; align-items: center; padding-bottom: 20px; border-bottom: 1px solid #333; margin-bottom: 20px; }
        h1 { margin: 0; color: #f1c40f; text-shadow: 0 0 10px rgba(241, 196, 15, 0.3); }
        .back-btn { text-decoration: none; color: #94a3b8; font-weight: bold; border: 1px solid #333; padding: 8px 15px; border-radius: 8px; transition: 0.2s; }
        .back-btn:hover { background: #333; color: #fff; }
        .main-layout { display: flex; gap: 20px; height: 100%; overflow: hidden; }
        .sidebar { width: 300px; background: rgba(0,0,0,0.2); border-radius: 12px; border: 1px solid #333; display: flex; flex-direction: column; overflow: hidden; }
        .sidebar-header { padding: 15px; background: rgba(255,255,255,0.05); font-weight: bold; text-align: center; border-bottom: 1px solid #333; }
        .list-container { flex: 1; overflow-y: auto; padding: 10px; display: none; }
        .list-container.active { display: block; }
        .list-item { display: flex; align-items: center; gap: 10px; padding: 10px; border-bottom: 1px solid #333; cursor: pointer; transition: 0.2s; border-radius: 6px; }
        .list-item:hover { background: rgba(52, 152, 219, 0.1); }
        .list-item img, .npc-thumb { width: 40px; height: 40px; border-radius: 50%; background-color: rgba(0,0,0,0.3); image-rendering: pixelated; object-fit: contain; }
        .npc-thumb { background-size: 400% auto; background-position: 0 0; }
        .item-info { flex: 1; }
        .item-name { font-weight: bold; color: #fff; font-size: 1rem; }
        .item-sub { font-size: 0.7rem; color: #777; }
        .editor-area { flex: 1; background: var(--panel); border-radius: 12px; padding: 20px; overflow-y: auto; border: 1px solid #333; box-shadow: 0 10px 30px rgba(0,0,0,0.5); }
        .tabs { display: flex; gap: 10px; margin-bottom: 20px; border-bottom: 2px solid #333; }
        .tab-btn { background: none; border: none; padding: 10px 20px; color: #777; font-weight: bold; cursor: pointer; font-size: 1rem; border-bottom: 2px solid transparent; margin-bottom: -2px; }
        .tab-btn.active { color: var(--accent); border-bottom-color: var(--accent); }
        .form-grid { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 15px; margin-bottom: 20px; }
        .full-width { grid-column: span 3; }
        label { display: block; font-size: 0.8rem; color: #94a3b8; margin-bottom: 5px; text-transform: uppercase; }
        input, select, textarea { width: 100%; background: #0f172a; border: 1px solid #334155; color: white; padding: 10px; border-radius: 6px; font-family: inherit; }
        input:focus { border-color: var(--accent); outline: none; }
        .moves-wrapper { background: #0f172a; border: 1px solid #333; padding: 10px; border-radius: 8px; max-height: 200px; overflow-y: auto; display: grid; grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 5px; }
        .move-option { display: flex; align-items: center; gap: 5px; padding: 5px; background: rgba(255,255,255,0.03); border-radius: 4px; font-size: 0.8rem; cursor: pointer; user-select: none; }
        .move-option:hover { background: rgba(255,255,255,0.1); }
        .move-option input { width: auto; margin: 0; }
        .move-lvl-input { width: 40px; padding: 2px; font-size: 0.7rem; text-align: center; border: 1px solid #555; background: #000; color: var(--accent); }
        .btn-row { display: flex; gap: 10px; margin-top: 20px; }
        button { flex: 1; padding: 12px; border: none; border-radius: 6px; font-weight: bold; cursor: pointer; transition: 0.2s; }
        .btn-save { background: var(--success); color: #000; }
        .btn-delete { background: var(--danger); color: #fff; flex: 0.3; }
        .btn-new { background: var(--accent); color: #fff; margin-bottom: 10px; width: 100%; padding: 10px; border-radius: 6px; border: none; cursor: pointer; }
        .hidden { display: none; }
        h4 { color: #f1c40f; border-bottom: 1px solid #333; padding-bottom: 5px; margin-bottom: 15px; }
    </style>
</head>
<body>
    <header>
        <div><h1>LABORATÓRIO</h1><small style="color:#777">Painel de Criação e Balanceamento</small></div>
        <a href="/lobby?userId=<%= user._id %>" class="back-btn">VOLTAR AO JOGO</a>
    </header>
    <div class="main-layout">
        <div class="sidebar">
            <div id="list-poke" class="list-container active">
                <div class="sidebar-header">POKEMONS (<%= pokemons.length %>)</div>
                <div style="padding:10px;"><button class="btn-new" onclick="clearPokeForm()">+ NOVO</button></div>
                <% pokemons.forEach(p => { %>
                    <div class="list-item" onclick="loadPokemon(<%= JSON.stringify(p) %>)">
                        <img src="<%= (p.sprite && (p.sprite.startsWith('http') || p.sprite.startsWith('data:'))) ? p.sprite : '/uploads/' + p.sprite %>">
                        <div class="item-info"><div class="item-name"><%= p.name %></div><div class="item-sub">ID: <%= p.id %></div></div>
                    </div>
                <% }) %>
            </div>
            <div id="list-npc" class="list-container">
                <div class="sidebar-header">NPCS (<%= npcs.length %>)</div>
                <div style="padding:10px;"><button class="btn-new" onclick="clearNpcForm()">+ NOVO</button></div>
                <% npcs.forEach(n => { %>
                    <div class="list-item" onclick="loadNpc(<%= JSON.stringify(n) %>)">
                        <% if(n.isCustomSkin) { %> <div class="npc-thumb" style="background-image: url('<%= n.skin %>')"></div>
                        <% } else { %> <div class="npc-thumb" style="background-image: url('/uploads/<%= n.skin %>.png')"></div> <% } %>
                        <div class="item-info"><div class="item-name"><%= n.name %></div><div class="item-sub"><%= n.map %></div></div>
                    </div>
                <% }) %>
            </div>
        </div>
        <div class="editor-area">
            <div class="tabs">
                <button id="btn-tab-poke" class="tab-btn active" onclick="switchMode('poke')">POKEMON</button>
                <button id="btn-tab-npc" class="tab-btn" onclick="switchMode('npc')">NPC</button>
            </div>
            <div id="tab-poke" class="tab-content">
                <form id="pokeForm" action="/lab/create" method="POST" enctype="multipart/form-data" onsubmit="prepareMoves()">
                    <input type="hidden" name="existingId" id="existingId"><input type="hidden" name="movesJson" id="movesJson">
                    <div class="form-grid">
                        <div><label>ID</label><input type="text" name="id" id="pokeId" disabled style="opacity:0.5;"></div>
                        <div class="full-width" style="grid-column: span 2;"><label>Nome</label><input type="text" name="name" id="pokeName" required></div>
                    </div>
                    <div class="form-grid">
                        <div><label>Tipo</label><select name="type" id="pokeType"><% Object.keys(types).forEach(t => { %> <option value="<%= t %>"><%= t.toUpperCase() %></option> <% }) %></select></div>
                        <div><label>Chance</label><input type="number" step="0.1" name="catchRate" id="pokeRate" value="0.5"></div>
                        <div><label>Spawn Chance</label><input type="number" name="spawnChance" id="pokeSpawn" value="10"></div>
                    </div>
                    <h4>STATUS</h4>
                    <div class="form-grid" style="grid-template-columns: repeat(5, 1fr);">
                        <div><label>HP</label><input type="number" name="hp" id="statHp" required></div><div><label>EN</label><input type="number" name="energy" id="statEn" required></div><div><label>ATK</label><input type="number" name="atk" id="statAtk" required></div><div><label>DEF</label><input type="number" name="def" id="statDef" required></div><div><label>SPD</label><input type="number" name="spd" id="statSpd" required></div>
                    </div>
                    <h4>GOLPES</h4>
                    <div class="moves-wrapper">
                        <% Object.keys(moves).forEach(moveKey => { const m = moves[moveKey]; %>
                            <div class="move-option"><input type="checkbox" class="move-check" data-id="<%= moveKey %>" id="chk_<%= moveKey %>"><span><%= m.name %></span><input type="number" class="move-lvl-input" id="lvl_<%= moveKey %>" value="1"></div>
                        <% }) %>
                    </div>
                    <div class="form-grid" style="margin-top:20px;">
                        <div><label>Spawn</label><select name="location" id="pokeLoc"><option value="none">Nenhum</option><option value="forest">Floresta</option></select></div>
                        <div><label>Min Lv</label><input type="number" name="minLvl" id="spawnMin" value="1"></div><div><label>Max Lv</label><input type="number" name="maxLvl" id="spawnMax" value="5"></div>
                    </div>
                    <div class="form-grid"><div class="full-width"><label>Evolução</label><div style="display:flex; gap:10px;"><input type="text" name="evoTarget" id="evoTarget" placeholder="ID Alvo"><input type="number" name="evoLevel" id="evoLevel" placeholder="Lv" style="width:80px;"></div></div></div>
                    <div class="form-grid"><div class="full-width"><label>Sprite</label><input type="file" name="sprite" accept="image/*"><div id="imgPreview" style="margin-top:10px; height:50px;"></div></div></div>
                    <label><input type="checkbox" name="isStarter" id="isStarter" style="width:auto;"> Inicial?</label>
                    <div class="btn-row"><button type="submit" class="btn-save">SALVAR POKEMON</button><button type="button" class="btn-delete" onclick="deleteItem('deleteForm')">EXCLUIR</button></div>
                </form>
                <form id="deleteForm" action="/lab/delete" method="POST" style="display:none;"><input type="hidden" name="id" id="deleteId"></form>
            </div>
            <div id="tab-npc" class="tab-content hidden">
                <form id="npcForm" action="/lab/create-npc" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="userId" value="<%= user._id %>"><input type="hidden" name="npcId" id="npcId">
                    <div class="form-grid"><div class="full-width"><label>Nome</label><input type="text" name="name" id="npcName" required></div></div>
                    <div class="form-grid">
                        <div><label>Mapa</label><select name="map" id="npcMap"><option value="lobby">Lobby</option><option value="forest">Floresta</option></select></div>
                        <div><label>X (%)</label><input type="number" name="x" id="npcX" value="50"></div><div><label>Y (%)</label><input type="number" name="y" id="npcY" value="50"></div>
                    </div>
                    <div class="form-grid">
                        <div><label>Direção</label><select name="direction" id="npcDir"><option value="down">Baixo</option><option value="up">Cima</option><option value="left">Esquerda</option><option value="right">Direita</option></select></div>
                        <div><label>Recompensa ($)</label><input type="number" name="money" id="npcMoney" value="100"></div>
                        <div><label>Skin Padrão</label><select name="skinSelect" id="npcSkinSelect"><% for(let i=1; i<=12; i++){ %><option value="char<%=i%>">Char <%=i%></option><% } %></select></div>
                    </div>
                    <div style="margin-bottom:15px;"><label>Upload Skin</label><input type="file" name="npcSkinFile" accept="image/*"><div id="npcImgPreview" style="height:50px; margin-top:5px;"></div></div>
                    
                    <h4>DIÁLOGOS</h4>
                    <label>Fala Inicial</label><input type="text" name="dialogue" id="npcDialogue" placeholder="Olá! Vamos batalhar!">
                    
                    <div class="form-grid" style="margin-top:10px;">
                        <div class="full-width"><label>Fala Pós-Vitória (Tutorial / Único)</label><input type="text" name="winDialogue" id="npcWinDialogue"></div>
                    </div>
                    <div class="form-grid">
                        <div class="full-width"><label>Fala de Carregando (Cooldown)</label><input type="text" name="cooldownDialogue" id="npcCdDialogue"></div>
                    </div>

                    <h4 style="margin-top:20px;">CONFIGURAÇÕES AVANÇADAS</h4>
                    <div class="form-grid">
                        <div class="full-width"><label>Tempo Cooldown (Minutos) - 0 = Nunca</label><input type="number" name="cooldownMinutes" id="npcCooldown" value="0"></div>
                    </div>

                    <h4 style="margin-top:20px;">RECOMPENSA ESPECIAL</h4>
                    <div class="form-grid">
                        <div><label>Tipo</label><select name="rewardType" id="npcRewType"><option value="none">Nenhuma</option><option value="item">Item</option><option value="pokemon">Pokemon</option></select></div>
                        <div><label>ID / Nome</label><input type="text" name="rewardVal" id="npcRewVal" placeholder="pokeball / charmander"></div>
                        <div><label>Qtd / Lv</label><input type="number" name="rewardQty" id="npcRewQty" value="1"></div>
                    </div>

                    <label style="margin-top:15px;">Time (JSON)</label><textarea name="teamJson" id="npcTeam" style="height:60px; font-family:monospace; color:#2ecc71; background:#000;" placeholder='[{"baseId":"bulbasaur", "level":5}]'></textarea>
                    
                    <div class="btn-row"><button type="submit" class="btn-save">SALVAR NPC</button><button type="button" class="btn-delete" onclick="deleteItem('deleteNpcForm')">EXCLUIR</button></div>
                </form>
                <form id="deleteNpcForm" action="/lab/delete-npc" method="POST" style="display:none;"><input type="hidden" name="id" id="deleteNpcId"></form>
            </div>
        </div>
    </div>
    <script>
        function switchMode(mode) {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active')); document.getElementById('btn-tab-' + mode).classList.add('active');
            document.querySelectorAll('.tab-content').forEach(c => c.classList.add('hidden')); document.getElementById('tab-' + mode).classList.remove('hidden');
            document.querySelectorAll('.list-container').forEach(l => l.classList.remove('active')); document.getElementById('list-' + mode).classList.add('active');
        }
        function clearPokeForm() { document.getElementById('pokeForm').reset(); document.getElementById('existingId').value = ""; document.getElementById('imgPreview').innerHTML = ""; document.querySelectorAll('.move-check').forEach(c => c.checked = false); }
        function loadPokemon(p) {
            switchMode('poke'); clearPokeForm(); document.getElementById('existingId').value = p.id; document.getElementById('pokeId').value = p.id;
            document.getElementById('pokeName').value = p.name; document.getElementById('pokeType').value = p.type;
            document.getElementById('statHp').value = p.baseStats.hp; document.getElementById('statEn').value = p.baseStats.energy; document.getElementById('statAtk').value = p.baseStats.attack; document.getElementById('statDef').value = p.baseStats.defense; document.getElementById('statSpd').value = p.baseStats.speed;
            document.getElementById('pokeRate').value = p.catchRate || 0.5; document.getElementById('pokeSpawn').value = p.spawnChance || 10; document.getElementById('pokeLoc').value = p.spawnLocation || 'none';
            document.getElementById('spawnMin').value = p.minSpawnLevel || 1; document.getElementById('spawnMax').value = p.maxSpawnLevel || 5; document.getElementById('isStarter').checked = !!p.isStarter;
            if(p.evolution) { document.getElementById('evoTarget').value = p.evolution.targetId || ''; document.getElementById('evoLevel').value = p.evolution.level || ''; }
            if(p.sprite) { const src = (p.sprite.startsWith('http') || p.sprite.startsWith('data:')) ? p.sprite : '/uploads/' + p.sprite; document.getElementById('imgPreview').innerHTML = `<img src="${src}" style="height:100%;">`; }
            if(p.movePool) { p.movePool.forEach(mp => { const check = document.getElementById('chk_' + mp.moveId); const lvlInp = document.getElementById('lvl_' + mp.moveId); if(check) check.checked = true; if(lvlInp) lvlInp.value = mp.level; }); }
        }
        function prepareMoves() { const moves = []; document.querySelectorAll('.move-check').forEach(chk => { if(chk.checked) { const id = chk.getAttribute('data-id'); const lvl = document.getElementById('lvl_' + id).value; moves.push({ moveId: id, level: parseInt(lvl) }); } }); document.getElementById('movesJson').value = JSON.stringify(moves); return true; }
        function clearNpcForm() { document.getElementById('npcForm').reset(); document.getElementById('npcId').value = ""; document.getElementById('npcImgPreview').innerHTML = ""; document.getElementById('npcTeam').value = '[{"baseId":"bulbasaur", "level":5}]'; }
        function loadNpc(n) {
            switchMode('npc'); clearNpcForm(); document.getElementById('npcId').value = n._id; document.getElementById('deleteNpcId').value = n._id;
            document.getElementById('npcName').value = n.name; document.getElementById('npcMap').value = n.map; document.getElementById('npcX').value = n.x; document.getElementById('npcY').value = n.y;
            document.getElementById('npcDir').value = n.direction || 'down'; document.getElementById('npcMoney').value = n.moneyReward || 0; 
            document.getElementById('npcDialogue').value = n.dialogue || ''; 
            document.getElementById('npcWinDialogue').value = n.winDialogue || '';
            document.getElementById('npcCdDialogue').value = n.cooldownDialogue || '';
            document.getElementById('npcCooldown').value = n.cooldownMinutes || 0;
            
            if(n.team) { const cleanTeam = n.team.map(t => ({ baseId: t.baseId, level: t.level })); document.getElementById('npcTeam').value = JSON.stringify(cleanTeam); }
            if(!n.isCustomSkin) document.getElementById('npcSkinSelect').value = n.skin; else document.getElementById('npcImgPreview').innerHTML = `<img src="${n.skin}" style="height:100%;">`;
            
            if(n.reward) {
                document.getElementById('npcRewType').value = n.reward.type || 'none';
                document.getElementById('npcRewVal').value = n.reward.value || '';
                document.getElementById('npcRewQty').value = n.reward.qty || n.reward.level || 1;
            }
        }
        function deleteItem(formId) { const idInput = document.getElementById(formId === 'deleteForm' ? 'existingId' : 'npcId'); if(!idInput.value) return alert('Selecione um item primeiro.'); if(confirm('Excluir?')) { if(formId === 'deleteForm') document.getElementById('deleteId').value = idInput.value; if(formId === 'deleteNpcForm') document.getElementById('deleteNpcId').value = idInput.value; document.getElementById(formId).submit(); } }
    </script>
</body>
</html>