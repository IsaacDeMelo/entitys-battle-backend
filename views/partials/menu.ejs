<!-- L√ìGICA JAVASCRIPT DOS SISTEMAS -->
<script>
    // Vari√°veis globais para o menu
    let currentPokeId = null;

    function closeModal(id) { document.getElementById(id).style.display = 'none'; }
    
    function toggleFloatMenu() { 
        const items = document.getElementById('menuItems'); 
        if(!items) return; 
        items.style.display = items.style.display === 'flex' ? 'none' : 'flex'; 
    }
    
    // Fechar menu ao clicar fora
    document.addEventListener('click', (ev) => { 
        try { 
            const menu = document.getElementById('floatMenu'); 
            if(!menu) return; 
            if(!menu.contains(ev.target)) { 
                const items = document.getElementById('menuItems'); 
                if(items) items.style.display = 'none'; 
            } 
        } catch(e) {} 
    });

    // --- POKEDEX ---
    async function openPokedex() {
        const modal = document.getElementById('modalPokedex'); if(!modal) return; modal.style.display = 'flex';
        const grid = document.getElementById('dexGrid'); 
        
        // Seleciona o primeiro se nenhum estiver ativo
        const first = document.querySelectorAll('.dex-card')[0]; 
        if(first && !document.querySelector('.dex-card.active')) selectDexMonster(0, first); 
        
        // Carrega lista capturada (apenas para atualizar status se quiser implementar depois)
        try { await fetch(`/api/pokedex?userId=<%= user._id %>`); } catch(e) {}
    }

    function filterDex() { 
        const v = document.getElementById('dexSearch').value.toLowerCase(); 
        document.querySelectorAll('.dex-card').forEach(c => c.style.display = c.getAttribute('data-name').includes(v) ? 'flex' : 'none'); 
    }

    function selectDexMonster(i, el) { 
        // allMonsters deve ser passado pela view principal (room ou forest)
        const m = allMonsters[i]; 
        const safeSprite = (typeof resolveImg === 'function') ? resolveImg(m.sprite || '') : (m.sprite || ''); 
        
        document.querySelectorAll('.dex-card').forEach(c=>c.classList.remove('active')); 
        if(el) el.classList.add('active'); 
        
        let evoText = '';
        if (m.evolution && m.evolution.targetId) {
            const targetMon = allMonsters.find(x => x.id === m.evolution.targetId);
            const targetName = targetMon ? targetMon.name : m.evolution.targetId;
            evoText = `<div style="margin-top:12px; color:#aaa">Evolui para: <strong>${targetName}</strong> no n√≠vel ${m.evolution.level || '‚Äî'}</div>`;
        }

        const left = `<div style="padding:20px; text-align:center;"><div style="width:160px; height:160px; margin:0 auto; background:#081018; border-radius:12px; display:flex; align-items:center; justify-content:center;"><img src="${safeSprite}" style="width:120px; height:120px; image-rendering:pixelated;" /></div><h2 style="margin-top:12px;">${m.name}</h2><div style="margin-top:6px;"> <span class="dex-type-tag">${m.type}</span> </div><div style="margin-top:8px; color:#aaa; font-size:0.9rem;">Catch Rate: ${m.catchRate || 0.5}</div></div>`; 
        const stats = m.baseStats || {}; 
        const statRow = (label, key, color) => { 
            const val = stats[key] || 0; 
            const pct = Math.max(2, Math.min(100, Math.round((val / 100) * 100))); 
            return `<div class="dex-stats-row"><div class="dex-stat-label">${label}</div><div class="dex-stat-bar-bg"><div class="dex-stat-bar-fill ${key === 'hp' ? 'stat-hp' : key === 'attack' ? 'stat-atk' : key === 'defense' ? 'stat-def' : 'stat-spd'}" style="width:${pct}%"></div></div><div class="dex-stat-val">${val}</div></div>`; 
        }; 
        const right = `<div style="padding:20px;"><div style="font-weight:bold; color:#fff; margin-bottom:8px;">Base Stats</div>${statRow('HP','hp')}${statRow('ATK','attack')}${statRow('DEF','defense')}${statRow('SPD','speed')}<div style="margin-top:12px;"><strong style="color:#fff">Moves</strong><div class="dex-moves-list">${(m.movePool && m.movePool.length>0) ? m.movePool.map(mp => `<div class="dex-move-item">Lv.${mp.level}: ${mp.moveId}</div>`).join('') : '<div style="color:#777">Nenhum</div>'}</div></div>${evoText}</div>`; 
        document.getElementById('dexDetailsView').innerHTML = `<div style="display:flex; gap:10px; flex-direction:row;"> <div style="width:320px;">${left}</div> <div style="flex:1;">${right}</div> </div>`; 
    }

    // --- PC ---
    async function openPC() { document.getElementById('modalPC').style.display='flex'; loadPCData(); }
    
    async function loadPCData() {
        const tDiv = document.getElementById('pcTeamList'); const pDiv = document.getElementById('pcStorageList');
        tDiv.innerHTML = 'Carregando...'; pDiv.innerHTML = 'Carregando...';
        try {
            const res = await fetch('/api/pc?userId=<%= user._id %>'); const data = await res.json(); renderPC(data.team, data.pc);
        } catch(e) { tDiv.innerText='Erro'; pDiv.innerText='Erro'; }
    }
    
    function renderPC(team, pc) {
        const _resImg = (typeof resolveImg === 'function') ? resolveImg : (s) => s;
        const createItem = (p, from) => `<div class="pc-item" onclick="movePokemon('${p.instanceId}', '${from}')"><img src="${_resImg(p.sprite)}"><div class="pc-info"><div class="pc-name">${p.name} <span style="color:#00ff00">Lv.${p.level}</span></div><div class="pc-sub">HP: ${p.hp}/${p.maxHp}</div></div></div>`;
        document.getElementById('pcTeamList').innerHTML = team.length ? team.map(p => createItem(p, 'team')).join('') : '<div style="text-align:center;color:#004400; font-size:0.6rem;">Vazio</div>';
        document.getElementById('pcStorageList').innerHTML = pc.length ? pc.map(p => createItem(p, 'pc')).join('') : '<div style="text-align:center;color:#004400; font-size:0.6rem;">Vazio</div>';
    }
    
    async function movePokemon(pokemonId, currentLoc) {
        const target = currentLoc === 'team' ? 'pc' : 'team';
        try {
            if(target === 'team') { 
                const teamCount = (document.getElementById('pcTeamList').querySelectorAll('.pc-item') || []).length; 
                if(teamCount >= 6) { 
                    if(typeof showToast === 'function') showToast('Equipe cheia (6). Remova um antes.');
                    else alert('Equipe cheia (6). Remova um antes.');
                    return; 
                } 
            }
            const res = await fetch('/api/pc/move', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', pokemonId, from: currentLoc, to: target }) });
            const data = await res.json();
            if(data.success) { loadPCData(); } else { alert(data.error); }
        } catch(e) { alert("Erro ao mover."); }
    }

    // --- BAG & SHOP ---
    async function openBag() { 
        document.getElementById('modalTeam').style.display='flex'; 
        const content = document.getElementById('teamListContent'); 
        content.innerHTML = 'Carregando...'; 
        try { 
            const res = await fetch('/api/me?userId=<%= user._id %>'); 
            const data = await res.json(); 
            const pokemons = data.team || []; 
            const money = data.money || 0; 
            const pokeballs = data.pokeballs || 0; 
            const rareCandy = data.rareCandy || 0; 
            const _resImg = (typeof resolveImg === 'function') ? resolveImg : (s) => s;

            let html = `<div style="display:flex; gap:8px; margin-bottom:12px;"><button id="bagTabPoke" class="tab-btn active" onclick="switchBagTab('poke')">Pok√©mons</button><button id="bagTabItems" class="tab-btn" onclick="switchBagTab('items')">Itens</button><div style="flex:1"></div></div><div id="bagContentPoke">`; 
            
            if (pokemons.length === 0) { html += '<p style="text-align:center">Vazio.</p>'; } 
            else { 
                pokemons.forEach((p, index) => { 
                    const hpPct = Math.max(0, Math.min(100, (p.hp / p.maxHp) * 100)); 
                    const xpPct = (p.xpToNext && p.xp !== undefined) ? Math.max(0, Math.min(100, (p.xp / p.xpToNext) * 100)) : 0; 
                    const safeSprite = _resImg(p.sprite); 
                    const isLead = index === 0; 
                    
                    html += `<div class="team-list-item" style="${isLead ? 'border: 2px solid #f1c40f;' : ''}">
                        <div onclick="showMoveEditor('${p.instanceId}', '${p.name}', ${JSON.stringify(p.moves).replace(/"/g, '&quot;')}, ${JSON.stringify(p.learnedMoves).replace(/"/g, '&quot;')})" style="display:flex; align-items:center; gap:10px; flex:1;">
                            <img src="${safeSprite}" class="team-sprite">
                            <div class="team-info">
                                <div style="font-weight:bold; color:#f1c40f">${p.name} <span style="font-size:0.8rem; color:#aaa">Lv.${p.level}</span></div>
                                <div style="font-size:0.8rem; margin-top:2px;">HP: ${p.hp}/${p.maxHp}</div>
                                <div class="team-bar"><div class="team-fill" style="width:${hpPct}%"></div></div>
                                <div style="font-size:0.75rem; margin-top:4px; color:#aaa;">XP: ${p.xp || 0}/${p.xpToNext || '‚Äî'}</div>
                                <div class="team-bar"><div style="height:100%; background: linear-gradient(90deg,#f1c40f,#f39c12); width:${xpPct}%"></div></div>
                            </div>
                        </div>
                        <div style="display:flex; flex-direction:column; align-items:center; gap:6px;">
                            ${!isLead ? `<button onclick="setLead('${p.instanceId}')" style="background:none; border:none; cursor:pointer; font-size:1.2rem;">‚≠ê</button>` : '<span style="font-size:1rem;">üëë</span>'}
                            <div style="display:flex; gap:6px;">
                                <div style="font-size:1rem; cursor:pointer;" onclick="showMoveEditor('${p.instanceId}', '${p.name}', ${JSON.stringify(p.moves).replace(/"/g, '&quot;')}, ${JSON.stringify(p.learnedMoves).replace(/"/g, '&quot;')})">‚öôÔ∏è</div>
                                <div style="font-size:1rem; cursor:pointer;" onclick="abandonPokemon('${p.instanceId}')">üóëÔ∏è</div>
                            </div>
                        </div>
                    </div>`; 
                }); 
            } 
            html += `</div><div id="bagContentItems" style="display:none;"><div style="padding:10px; background:#07101a; border-radius:8px; border:1px solid #233; margin-bottom:10px;"><div style="font-weight:bold; color:#f1c40f; margin-bottom:8px;">Invent√°rio</div><div style="margin-top:6px; color:#ccc;">üî¥ Pok√©bolas: ${pokeballs}</div><div style="display:flex; justify-content:space-between; align-items:center; margin-top:6px; color:#ccc; background:#111; padding:8px; border-radius:4px;"><span>üç¨ Rare Candy: <strong>${rareCandy}</strong></span>${rareCandy > 0 ? `<button onclick="startRareCandySelection()" style="background:#f1c40f; color:#000; border:none; padding:5px 10px; border-radius:4px; cursor:pointer; font-weight:bold;">USAR</button>` : ''}</div><div style="margin-top:10px; font-size:0.8rem; color:#aaa;">üí∞ Saldo: ${money}</div></div><div style="display:flex; gap:8px;"><button onclick="closeModal('modalTeam')" style="flex:1; background:#555; border:none; padding:10px; border-radius:6px; color:#fff;">Fechar</button></div></div>`; 
            content.innerHTML = html; 
            switchBagTab('poke'); 
        } catch(e) { content.innerHTML = 'Erro.'; } 
    }

    async function startRareCandySelection() { 
        const content = document.getElementById('teamListContent'); 
        content.innerHTML = 'Carregando equipe...'; 
        try { 
            const res = await fetch('/api/me?userId=<%= user._id %>'); 
            const data = await res.json(); 
            const pokemons = data.team || []; 
            const rareCandy = data.rareCandy || 0; 
            const _resImg = (typeof resolveImg === 'function') ? resolveImg : (s) => s;

            if(rareCandy <= 0) { openBag(); return; } 
            
            let html = `<div style="text-align:center; margin-bottom:10px; color:#f1c40f;">üç¨ Doces Restantes: ${rareCandy}</div><p style="text-align:center; font-size:0.8rem; color:#ccc; margin-bottom:15px;">Escolha quem vai subir de n√≠vel:</p>`; 
            pokemons.forEach(p => { 
                const safeSprite = _resImg(p.sprite); 
                html += `<div style="background:#222; padding:8px; margin-bottom:8px; border-radius:8px; display:flex; align-items:center; gap:10px;"><img src="${safeSprite}" style="width:40px; height:40px; image-rendering:pixelated;"><div style="flex:1;"><div style="font-weight:bold;">${p.name}</div><div style="font-size:0.8rem; color:#aaa;">Lv.${p.level}</div></div><button onclick="applyRareCandy('${p.instanceId}')" style="background:#f39c12; color:#000; padding:8px 12px; border-radius:6px; font-weight:bold; cursor:pointer;">DAR DOCE</button></div>`; 
