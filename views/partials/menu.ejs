    async function applyRareCandy(pokeId) { 
        if(typeof showLoading === 'function') showLoading('Usando doce...'); 
        try { 
            const res = await fetch('/api/use-item', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', itemId: 'rareCandy', pokemonId: pokeId, qty: 1 }) }); 
            const data = await res.json(); 
            if(typeof hideLoading === 'function') hideLoading(); 
            if(data.success) { 
                if(typeof showToast === 'function') showToast(`N√≠vel subiu!`); 
                else alert('N√≠vel subiu!');
                startRareCandySelection(); 
            } else { 
                if(typeof showToast === 'function') showToast(data.error || "Erro ao usar."); 
                else alert(data.error);
            } 
        } catch(e) { 
            if(typeof hideLoading === 'function') hideLoading(); 
            alert("Erro de conex√£o."); 
        } 
    }

    function switchBagTab(tab) { 
        const poke = document.getElementById('bagContentPoke'); 
        const items = document.getElementById('bagContentItems'); 
        const tP = document.getElementById('bagTabPoke'); 
        const tI = document.getElementById('bagTabItems'); 
        if(!poke || !items) return; 
        if(tab === 'poke') { poke.style.display = 'block'; items.style.display = 'none'; if(tP) tP.classList.add('active'); if(tI) tI.classList.remove('active'); } 
        else { poke.style.display = 'none'; items.style.display = 'block'; if(tP) tP.classList.remove('active'); if(tI) tI.classList.add('active'); } 
    }

    async function openShop() { 
        try { 
            const res = await fetch('/api/me?userId=<%= user._id %>'); 
            const data = await res.json(); 
            document.getElementById('shopBalance').innerText = data.money || 0; 
        } catch (e) { document.getElementById('shopBalance').innerText = '‚Äî'; } 
        if(typeof hideLoading === 'function') hideLoading(); 
        document.getElementById('modalShop').style.display = 'flex'; 
    }

    async function buyItem(item) { 
        const qty = Number(document.getElementById(item === 'pokeball' ? 'buyPokeballQty' : 'buyRareQty').value) || 1; 
        try { 
            const res = await fetch('/api/buy-item', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', itemId: item, qty }) }); 
            const data = await res.json(); 
            if(data.success) { 
                if(typeof showToast === 'function') showToast('Compra bem sucedida!'); else alert('Compra bem sucedida!');
                document.getElementById('shopBalance').innerText = data.money || '0'; 
                if(document.getElementById('modalTeam').style.display === 'flex') openBag(); 
            } else { 
                if(typeof showToast === 'function') showToast(data.error || 'Erro na compra'); else alert(data.error);
            } 
        } catch(e) { alert('Erro ao conectar'); } 
    }

    async function abandonPokemon(instanceId) { 
        if(!confirm('Tem certeza que deseja LIBERTAR este pok√©mon para sempre?')) return; 
