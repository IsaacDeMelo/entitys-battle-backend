            </div>
            <div style="margin-top:10px; text-align:center; font-size:0.6rem; color:#00aa00;">:: SYSTEM READY ::</div>
        </div>
    </div>

    <!-- MODAL LOJA -->
    <div class="modal-overlay" id="modalShop"><div class="modal-content"><button class="close-btn" onclick="closeModal('modalShop')">X</button><h2 style="font-family:'Press Start 2P'; text-align:center; color:#f1c40f; font-size:1rem; margin-bottom:10px;">LOJA</h2><div style="display:flex; flex-direction:column; gap:10px;"><div style="display:flex; justify-content:space-between; align-items:center; padding:8px; background:#0b1220; border-radius:8px;"><div><div style="font-weight:bold">Pok√©bola</div><div style="font-size:0.8rem; color:#aaa">Captura pok√©mons</div></div><div style="display:flex; gap:8px; align-items:center;"><input id="buyPokeballQty" type="number" value="1" min="1" style="width:60px; padding:6px; background:#07101a; color:#fff; border-radius:6px; border:1px solid #233;"><button onclick="buyItem('pokeball')" style="background:#2ecc71; border:none; padding:8px; border-radius:6px;">COMPRAR (50)</button></div></div><div style="display:flex; justify-content:space-between; align-items:center; padding:8px; background:#0b1220; border-radius:8px;"><div><div style="font-weight:bold">Rare Candy</div><div style="font-size:0.8rem; color:#aaa">+1 N√≠vel (instant√¢neo)</div></div><div style="display:flex; gap:8px; align-items:center;"><input id="buyRareQty" type="number" value="1" min="1" style="width:60px; padding:6px; background:#07101a; color:#fff; border-radius:6px; border:1px solid #233;"><button onclick="buyItem('rareCandy')" style="background:#f1c40f; border:none; padding:8px; border-radius:6px;">COMPRAR (2000)</button></div></div><div style="text-align:center; color:#aaa; font-size:0.85rem;">Seu saldo: <span id="shopBalance">0</span></div></div></div></div>

    <!-- MODAL EQUIPE (BAG) -->
    <div class="modal-overlay" id="modalTeam"><div class="modal-content"><button class="close-btn" onclick="closeModal('modalTeam')">X</button><h2 style="font-family:'Press Start 2P'; text-align:center; color:#f1c40f; font-size:1rem; margin-bottom:20px;">MINHA EQUIPE</h2><div id="teamListContent">Carregando...</div></div></div>
    
    <!-- MODAL POKEDEX -->
    <div class="modal-overlay" id="modalPokedex"><div class="modal-content"><button class="close-btn" onclick="closeModal('modalPokedex')">X</button><div class="dex-sidebar"><div class="dex-search-box"><input type="text" id="dexSearch" class="dex-search-input" placeholder="üîç" onkeyup="filterDex()"></div><div class="dex-grid" id="dexGrid"><% if(typeof entities !== 'undefined') { entities.forEach((e, index) => { %><div class="dex-card" onclick="selectDexMonster(<%= index %>, this)" data-name="<%= e.name.toLowerCase() %>"><% if(e.sprite) { %> <img src="<%= e.sprite %>" class="dex-card-img"> <% } else { %> ‚ùì <% } %><div class="dex-card-name"><%= e.name %></div></div><% }) } %></div></div><div class="dex-main"><div class="dex-content-wrapper" id="dexDetailsView">Selecione um monstro.</div></div></div></div>

    <script src="/scripts/common.js"></script>
    <script>
        const socket = io();
        const myName = "<%= playerName %>";
        const mySkin = "<%= playerSkin %>";
        const gameArea = document.getElementById('gameArea');
        // Garantir que entities exista mesmo que o backend n√£o envie, para n√£o quebrar o JS
        const allMonsters = <%- JSON.stringify(typeof entities !== 'undefined' ? entities : []) %>;
        let myId = null; const MOVEMENT_SPEED = 55; let isPlayerMoving = false;
        
        const chatInput = document.getElementById('chatInput'); const chatBtn = document.getElementById('chatSend');
        function sendChat() { const msg = chatInput.value.trim(); if (msg) { socket.emit('send_chat', msg); chatInput.value = ''; chatInput.blur(); } }
        chatBtn.addEventListener('click', (e) => { e.stopPropagation(); sendChat(); }); chatInput.addEventListener('keypress', (e) => { if (e.key === 'Enter') sendChat(); }); chatInput.addEventListener('click', (e) => { e.stopPropagation(); });
        
        function showToast(msg) { const container = document.getElementById('toastContainer'); const toast = document.createElement('div'); toast.className = 'toast'; toast.innerText = msg; container.appendChild(toast); setTimeout(() => { toast.style.opacity = '0'; setTimeout(() => toast.remove(), 500); }, 3000); }
        function resolveImg(src) { return (src.startsWith('http') || src.startsWith('data:')) ? src : '/uploads/' + src; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }
        
        const urlParams = new URLSearchParams(window.location.search);
        const spawnFrom = urlParams.get('from');

        // --- L√ìGICA DO MENU RETR√ÅTIL ---
        function toggleFloatMenu() {
            const items = document.getElementById('menuItems'); if(!items) return; items.style.display = items.style.display === 'flex' ? 'none' : 'flex';
        }
        document.addEventListener('click', (ev) => { try { const menu = document.getElementById('floatMenu'); if(!menu) return; if(!menu.contains(ev.target)) { const items = document.getElementById('menuItems'); if(items) items.style.display = 'none'; } } catch(e) {} });

        // --- SOCKET & MAPA ---
        socket.on('connect', () => {
            myId = socket.id;
            let initialX = 50; let initialY = 50; let initialDir = 'down';
            if (spawnFrom === 'lobby') { initialX = 90; initialY = 50; initialDir = 'left'; }
            socket.emit('enter_map', { userId: '<%= user._id %>', name: myName, skin: mySkin, map: 'forest', x: initialX, y: initialY, direction: initialDir });
        });
        socket.on('map_state', (players) => { document.querySelectorAll('.player').forEach(el => el.remove()); players.forEach(p => createPlayerElement(p)); hideLoading(); });
        socket.on('player_joined', (p) => { if(p.id !== myId) createPlayerElement(p); });
        socket.on('duplicate_session', (info) => { showToast('Sess√£o desconectada: outra entrada com esta conta.'); setTimeout(() => { window.location.href = '/'; }, 1800); });
        socket.on('player_moved', (data) => {
            const el = document.getElementById(`p-${data.id}`);
            if (el) {
                const currentLeft = parseFloat(el.style.left) || 50; const currentTop = parseFloat(el.style.top) || 50;
                const dx = data.x - currentLeft; const dy = data.y - currentTop;
                const distance = Math.sqrt(dx*dx + dy*dy); const duration = distance > 0 ? distance / MOVEMENT_SPEED : 0;
                el.style.transition = `top ${duration}s linear, left ${duration}s linear`; void el.offsetWidth; 
                el.style.left = data.x + '%'; el.style.top = data.y + '%'; el.style.zIndex = Math.floor(data.y); el.setAttribute('data-dir', data.direction);
                if (duration > 0) { 
                    if (!el.classList.contains('walking')) el.classList.add('walking'); 
                    if (el.walkTimeout) clearTimeout(el.walkTimeout); 
                    el.walkTimeout = setTimeout(() => { 
                        el.classList.remove('walking'); 
                        if (data.id === myId) { 
                            isPlayerMoving = false; 
                            if (data.x > 88 && data.y > 25 && data.y < 75) { showLoading('Voltando ao lobby...', 'right'); setTimeout(() => { window.location.href = '/lobby?from=forest&userId=<%= user._id %>'; }, 120); }
                        } 
                    }, duration * 1000); 
                }
            }
        });
        socket.on('player_left', (id) => { const el = document.getElementById(`p-${id}`); if (el) el.remove(); });
        socket.on('chat_message', (data) => { const p = document.getElementById(`p-${data.id}`); if(p) { const b = document.createElement('div'); b.className='chat-bubble'; b.innerText=data.msg; p.appendChild(b); setTimeout(()=>b.remove(),4000); }});
        
        // --- BATALHA SELVAGEM (FOREST SPECIFIC) ---
        socket.on('encounter_found', () => {
            isPlayerMoving = true; showToast("üåø Um Pok√©mon selvagem apareceu!");
            showLoading('Iniciando batalha...', 'left');
            setTimeout(() => { fetch('/battle/wild', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>' }) }).then(r => r.json()).then(data => { if(data.battleId) window.location.href = '/battle/' + data.battleId; else { hideLoading(); showToast(data.error); isPlayerMoving = false; } }); }, 1000);
        });

        function createPlayerElement(p) { const div = document.createElement('div'); div.id = `p-${p.id}`; div.className = 'player'; div.style.left = p.x + '%'; div.style.top = p.y + '%'; div.style.zIndex = Math.floor(p.y); div.setAttribute('data-dir', p.direction || 'down'); div.style.backgroundImage = `url('/uploads/${p.skin || "char1"}.png')`; const label = document.createElement('div'); label.className = 'player-name'; label.innerText = p.name; div.appendChild(label); gameArea.appendChild(div); }
        
        gameArea.addEventListener('click', (e) => {
            if (isPlayerMoving) return;
            const rect = gameArea.getBoundingClientRect(); const targetX = ((e.clientX - rect.left) / rect.width) * 100; const targetY = ((e.clientY - rect.top) / rect.height) * 100;
            isPlayerMoving = true; socket.emit('move_player', { x: targetX, y: targetY });
            const elements = document.elementsFromPoint(e.clientX, e.clientY);
            const grassEl = elements.find(el => el.classList && el.classList.contains('grass-patch'));
            if (grassEl) socket.emit('check_encounter', { grassId: grassEl.id, x: targetX, y: targetY });
        });

        // --- SISTEMA DE POKEDEX (Completo) ---
        async function openPokedex() {
            const modal = document.getElementById('modalPokedex'); if(!modal) return; modal.style.display = 'flex';
            const grid = document.getElementById('dexGrid'); const details = document.getElementById('dexDetailsView');
            if(grid) grid.innerHTML = '<div style="padding:16px; color:#aaa">Carregando seu registro...</div>';
            try {
                const res = await fetch(`/api/pokedex?userId=<%= user._id %>`);
                if(!res.ok) { grid.innerHTML = '<div style="padding:16px; color:#aaa">Sem dados.</div>'; return; }
                const data = await res.json();
                const captured = (data.list || []).map(x => (typeof x === 'string') ? x.toLowerCase() : (x.name || '').toLowerCase());
                const entries = allMonsters.filter(m => captured.includes((m.name || '').toLowerCase() ) || captured.includes((m.id || '').toString()));
                if(!entries || entries.length === 0) { grid.innerHTML = '<div style="padding:16px; color:#aaa">Nenhum registro. Capture pok√©mons para ver aqui.</div>'; details.innerHTML = 'Selecione um monstro.'; return; }
                grid.innerHTML = '';
                entries.forEach((e, idx) => {
                    const card = document.createElement('div'); card.className = 'dex-card'; card.setAttribute('data-name', (e.name || '').toLowerCase());
                    const img = e.sprite ? `<img src="${e.sprite}" class="dex-card-img">` : '‚ùì';
                    card.innerHTML = `${img}<div class="dex-card-name">${e.name}</div>`;
                    card.onclick = () => selectDexMonster(allMonsters.findIndex(a => a.name === e.name), card);
                    grid.appendChild(card);
                });
                const first = grid.querySelector('.dex-card'); if(first) first.click();
            } catch (err) { grid.innerHTML = '<div style="padding:16px; color:#aaa">Erro ao carregar.</div>'; console.error(err); }
        }
        function filterDex() { const v = document.getElementById('dexSearch').value.toLowerCase(); document.querySelectorAll('.dex-card').forEach(c => c.style.display = c.getAttribute('data-name').includes(v) ? 'flex' : 'none'); }
        function selectDexMonster(i, el) { const m = allMonsters[i]; const safeSprite = resolveImg(m.sprite || ''); document.querySelectorAll('.dex-card').forEach(c=>c.classList.remove('active')); if(el) el.classList.add('active'); const left = `<div style="padding:20px; text-align:center;"><div style="width:160px; height:160px; margin:0 auto; background:#081018; border-radius:12px; display:flex; align-items:center; justify-content:center;"><img src="${safeSprite}" style="width:120px; height:120px; image-rendering:pixelated;" /></div><h2 style="margin-top:12px;">${m.name}</h2><div style="margin-top:6px;"> <span class="dex-type-tag">${m.type}</span> </div><div style="margin-top:8px; color:#aaa; font-size:0.9rem;">Catch Rate: ${m.catchRate || 0.5}</div></div>`; const stats = m.baseStats || {}; const statRow = (label, key, color) => { const val = stats[key] || 0; const pct = Math.max(2, Math.min(100, Math.round((val / 100) * 100))); return `<div class="dex-stats-row"><div class="dex-stat-label">${label}</div><div class="dex-stat-bar-bg"><div class="dex-stat-bar-fill ${key === 'hp' ? 'stat-hp' : key === 'attack' ? 'stat-atk' : key === 'defense' ? 'stat-def' : 'stat-spd'}" style="width:${pct}%"></div></div><div class="dex-stat-val">${val}</div></div>`; }; const right = `<div style="padding:20px;"><div style="font-weight:bold; color:#fff; margin-bottom:8px;">Base Stats</div>${statRow('HP','hp')}${statRow('ATK','attack')}${statRow('DEF','defense')}${statRow('SPD','speed')}<div style="margin-top:12px;"><strong style="color:#fff">Moves</strong><div class="dex-moves-list">${(m.movePool && m.movePool.length>0) ? m.movePool.map(mp => `<div class="dex-move-item">Lv.${mp.level}: ${mp.moveId}</div>`).join('') : '<div style="color:#777">Nenhum</div>'}</div></div>${m.evolution && m.evolution.targetId ? `<div style="margin-top:12px; color:#aaa">Evolui para: ${m.evolution.targetId} no n√≠vel ${m.evolution.level || '‚Äî'}</div>` : ''}</div>`; document.getElementById('dexDetailsView').innerHTML = `<div style="display:flex; gap:10px; flex-direction:row;"> <div style="width:320px;">${left}</div> <div style="flex:1;">${right}</div> </div>`; }

        // --- SISTEMA DE PC (Completo) ---
        async function openPC() { document.getElementById('modalPC').style.display='flex'; loadPCData(); }
        async function loadPCData() {
            const tDiv = document.getElementById('pcTeamList'); const pDiv = document.getElementById('pcStorageList');
            tDiv.innerHTML = 'Carregando...'; pDiv.innerHTML = 'Carregando...';
            try {
                const res = await fetch('/api/pc?userId=<%= user._id %>'); const data = await res.json(); renderPC(data.team, data.pc);
            } catch(e) { tDiv.innerText='Erro'; pDiv.innerText='Erro'; }
        }
        function renderPC(team, pc) {
            const createItem = (p, from) => `<div class="pc-item" onclick="movePokemon('${p.instanceId}', '${from}')"><img src="${resolveImg(p.sprite)}"><div class="pc-info"><div class="pc-name">${p.name} <span style="color:#00ff00">Lv.${p.level}</span></div><div class="pc-sub">HP: ${p.hp}/${p.maxHp}</div></div></div>`;
            document.getElementById('pcTeamList').innerHTML = team.length ? team.map(p => createItem(p, 'team')).join('') : '<div style="text-align:center;color:#004400; font-size:0.6rem;">Vazio</div>';
            document.getElementById('pcStorageList').innerHTML = pc.length ? pc.map(p => createItem(p, 'pc')).join('') : '<div style="text-align:center;color:#004400; font-size:0.6rem;">Vazio</div>';
        }
        async function movePokemon(pokemonId, currentLoc) {
            const target = currentLoc === 'team' ? 'pc' : 'team';
            try {
                if(target === 'team') { const teamCount = (document.getElementById('pcTeamList').querySelectorAll('.pc-item') || []).length; if(teamCount >= 6) { showToast('Equipe cheia (6). Remova um antes.'); return; } }
                const res = await fetch('/api/pc/move', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', pokemonId, from: currentLoc, to: target }) });
                const data = await res.json();
                if(data.success) { loadPCData(); } else { showToast(data.error); }
            } catch(e) { showToast("Erro ao mover."); }
        }

        // --- SISTEMA DE BAG E LOJA (Completo) ---
        let currentPokeId = null;
        async function openBag() { document.getElementById('modalTeam').style.display='flex'; const content = document.getElementById('teamListContent'); content.innerHTML = 'Carregando...'; try { const res = await fetch('/api/me?userId=<%= user._id %>'); const data = await res.json(); const pokemons = data.team || []; const money = data.money || 0; const pokeballs = data.pokeballs || 0; const rareCandy = data.rareCandy || 0; let html = `<div style="display:flex; gap:8px; margin-bottom:12px;"><button id="bagTabPoke" class="tab-btn active" onclick="switchBagTab('poke')">Pok√©mons</button><button id="bagTabItems" class="tab-btn" onclick="switchBagTab('items')">Itens</button><div style="flex:1"></div><button onclick="openShop()" style="background:#2ecc71; border:none; padding:6px 8px; border-radius:6px; color:#000;">Abrir Loja</button></div><div id="bagContentPoke">`; if (pokemons.length === 0) { html += '<p style="text-align:center">Vazio.</p>'; } else { pokemons.forEach((p, index) => { const hpPct = Math.max(0, Math.min(100, (p.hp / p.maxHp) * 100)); const xpPct = (p.xpToNext && p.xp !== undefined) ? Math.max(0, Math.min(100, (p.xp / p.xpToNext) * 100)) : 0; const safeSprite = resolveImg(p.sprite); const isLead = index === 0; html += `<div class="team-list-item" style="${isLead ? 'border: 2px solid #f1c40f;' : ''}"><div onclick="showMoveEditor('${p.instanceId}', '${p.name}', ${JSON.stringify(p.moves).replace(/"/g, '&quot;')}, ${JSON.stringify(p.learnedMoves).replace(/"/g, '&quot;')})" style="display:flex; align-items:center; gap:10px; flex:1;"><img src="${safeSprite}" class="team-sprite"><div class="team-info"><div style="font-weight:bold; color:#f1c40f">${p.name} <span style="font-size:0.8rem; color:#aaa">Lv.${p.level}</span></div><div style="font-size:0.8rem; margin-top:2px;">HP: ${p.hp}/${p.maxHp}</div><div class="team-bar"><div class="team-fill" style="width:${hpPct}%"></div></div><div style="font-size:0.75rem; margin-top:4px; color:#aaa;">XP: ${p.xp || 0}/${p.xpToNext || '‚Äî'}</div><div class="team-bar"><div style="height:100%; background: linear-gradient(90deg,#f1c40f,#f39c12); width:${xpPct}%"></div></div></div></div><div style="display:flex; flex-direction:column; align-items:center; gap:6px;">${!isLead ? `<button onclick="setLead('${p.instanceId}')" style="background:none; border:none; cursor:pointer; font-size:1.2rem;">‚≠ê</button>` : '<span style="font-size:1rem;">üëë</span>'}<div style="display:flex; gap:6px;"><div style="font-size:1rem; cursor:pointer;" onclick="showMoveEditor('${p.instanceId}', '${p.name}', ${JSON.stringify(p.moves).replace(/"/g, '&quot;')}, ${JSON.stringify(p.learnedMoves).replace(/"/g, '&quot;')})">‚öôÔ∏è</div><div style="font-size:1rem; cursor:pointer;" onclick="abandonPokemon('${p.instanceId}')">üóëÔ∏è</div></div></div></div>`; }); } html += `</div><div id="bagContentItems" style="display:none;"><div style="padding:10px; background:#07101a; border-radius:8px; border:1px solid #233; margin-bottom:10px;"><div style="font-weight:bold; color:#f1c40f;">Saldo: ${money}</div><div style="margin-top:6px; color:#ccc;">Pok√©bolas: ${pokeballs}</div><div style="margin-top:6px; color:#ccc;">RareCandy: ${rareCandy}</div></div><div style="display:flex; gap:8px;"><button onclick="openShop()" style="flex:1; background:#2ecc71; border:none; padding:10px; border-radius:6px;">Comprar</button><button onclick="closeModal('modalTeam')" style="flex:1; background:#555; border:none; padding:10px; border-radius:6px; color:#fff;">Fechar</button></div></div>`; content.innerHTML = html; switchBagTab('poke'); } catch(e) { content.innerHTML = 'Erro.'; } }
        function switchBagTab(tab) { const poke = document.getElementById('bagContentPoke'); const items = document.getElementById('bagContentItems'); const tP = document.getElementById('bagTabPoke'); const tI = document.getElementById('bagTabItems'); if(!poke || !items) return; if(tab === 'poke') { poke.style.display = 'block'; items.style.display = 'none'; if(tP) tP.classList.add('active'); if(tI) tI.classList.remove('active'); } else { poke.style.display = 'none'; items.style.display = 'block'; if(tP) tP.classList.remove('active'); if(tI) tI.classList.add('active'); } }
        async function openShop() { try { const res = await fetch('/api/me?userId=<%= user._id %>'); const data = await res.json(); document.getElementById('shopBalance').innerText = data.money || 0; } catch (e) { document.getElementById('shopBalance').innerText = '‚Äî'; } document.getElementById('modalShop').style.display = 'flex'; }
        async function buyItem(item) { const qty = Number(document.getElementById(item === 'pokeball' ? 'buyPokeballQty' : 'buyRareQty').value) || 1; try { const res = await fetch('/api/buy-item', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', itemId: item, qty }) }); const data = await res.json(); if(data.success) { showToast('Compra bem sucedida!'); document.getElementById('shopBalance').innerText = data.money || '0'; if(document.getElementById('modalTeam').style.display === 'flex') openBag(); } else { showToast(data.error || 'Erro na compra'); } } catch(e) { alert('Erro ao conectar'); } }
        async function abandonPokemon(instanceId) { if(!confirm('Tem certeza que deseja LIBERTAR este pok√©mon para sempre?')) return; showLoading('Libertando...', 'left'); try { const res = await fetch('/api/abandon-pokemon', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', pokemonId: instanceId }) }); const data = await res.json(); hideLoading(); if(data.success) { showToast('Pok√©mon libertado.'); setTimeout(() => openBag(), 100); } else { showToast(data.error || 'Erro ao libertar.'); } } catch(e) { hideLoading(); alert('Erro de conex√£o.'); } }
        async function setLead(pokeId) { const res = await fetch('/api/set-lead', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', pokemonId: pokeId }) }); const data = await res.json(); if(data.success) { showToast("Novo l√≠der definido!"); openBag(); } }
        function showMoveEditor(id, name, equipped, learned) { currentPokeId = id; const pool = (learned && learned.length > 0) ? learned : equipped; let html = `<h3 style="text-align:center; color:#3498db;">${name} - Golpes</h3><p style="font-size:0.7rem; color:#aaa; text-align:center;">Selecione at√© 4.</p><div style="display:flex; flex-wrap:wrap; gap:5px; margin-top:10px;">`; pool.forEach(moveId => { const isEquipped = equipped.includes(moveId); const style = isEquipped ? "background:#2ecc71; border-color:#27ae60;" : "background:#444; border-color:#555;"; html += `<div onclick="toggleMove('${moveId}', this)" class="move-chip" style="padding:8px; border:2px solid; border-radius:5px; cursor:pointer; ${style}" data-id="${moveId}">${moveId}</div>`; }); html += `</div><button onclick="saveMoves()" style="width:100%; padding:10px; margin-top:20px; background:#f1c40f; border:none; border-radius:5px; font-weight:bold; cursor:pointer;">SALVAR</button><button onclick="openBag()" style="width:100%; padding:10px; margin-top:5px; background:#555; border:none; border-radius:5px; cursor:pointer; color:white;">VOLTAR</button>`; document.getElementById('teamListContent').innerHTML = html; }
        function toggleMove(moveId, el) { const chips = document.querySelectorAll('.move-chip'); let selected = []; chips.forEach(c => { if(c.style.background.includes('2ecc71')) selected.push(c); }); if(el.style.background.includes('2ecc71')) { if(selected.length <= 1) { showToast("Precisa de pelo menos 1 ataque!"); return; } el.style.background = '#444'; el.style.borderColor = '#555'; } else { if(selected.length >= 4) { showToast("M√°ximo de 4 ataques!"); return; } el.style.background = '#2ecc71'; el.style.borderColor = '#27ae60'; } }
        async function saveMoves() { const chips = document.querySelectorAll('.move-chip'); let finalMoves = []; chips.forEach(c => { if(c.style.background.includes('2ecc71')) finalMoves.push(c.getAttribute('data-id')); }); const res = await fetch('/api/equip-move', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ userId: '<%= user._id %>', pokemonId: currentPokeId, moves: finalMoves }) }); const data = await res.json(); if(data.success) { showToast("Golpes salvos!"); openBag(); } else { showToast(data.error); } }

        function showLoading(msg = 'Carregando...', dir) { const loader = document.getElementById('loader'); if (!loader) return; const text = loader.querySelector('.loader-text'); if (text) text.innerText = msg; if (dir) loader.setAttribute('data-dir', dir); loader.classList.add('show'); loader.setAttribute('aria-hidden', 'false'); }
        function hideLoading() { const loader = document.getElementById('loader'); if (!loader) return; loader.classList.remove('show'); loader.removeAttribute('data-dir'); loader.setAttribute('aria-hidden', 'true'); }
        window.addEventListener('beforeunload', () => { showLoading(); });
    </script>
