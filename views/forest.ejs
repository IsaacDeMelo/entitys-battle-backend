            <button class="float-btn" data-role="pokedex" onclick="openPokedex()" aria-label="Pokedex">üìö</button>
            <button class="float-btn" data-role="pc" style="border-color:#00ff00; color:#00ff00;" onclick="openPC()" aria-label="PC">üíª</button>
            <button class="float-btn" data-role="shop" onclick="openShop()" aria-label="Shop">üè™</button>
