        <div class="lobby-exit"></div>
        <div class="grass-patch" id="grass1" style="top: 20%; left: 10%; width: 30%; height: 30%;"></div>
        <div class="grass-patch" id="grass2" style="top: 60%; left: 50%; width: 40%; height: 25%;"></div>
        <div class="tree" style="top:5%; left:5%">üå≤</div><div class="tree" style="top:50%; left:5%">üå≤</div>
        <div class="tree" style="top:15%; left:80%">üå≤</div>
        <div id="chatBar"><input type="text" id="chatInput" placeholder="Mensagem..." autocomplete="off" maxlength="30"><button id="chatSend">üí¨</button></div>
    </div>
    <div id="toastContainer"></div>

    <div id="loader" class="loader-overlay show" aria-hidden="false"><div class="loader-box"><div class="spinner"></div><div class="loader-text">Carregando mapa...</div></div></div>

    <!-- MODAL PC STORAGE (THEMED) -->
    <div class="modal-overlay" id="modalPC">
        <div class="modal-content pc-screen">
            <button class="close-btn" onclick="closeModal('modalPC')">X</button>
            <h2 style="text-align:center; color:#00ff00; margin-bottom:15px; text-shadow: 0 0 5px #00ff00;">PC STORAGE SYSTEM</h2>
